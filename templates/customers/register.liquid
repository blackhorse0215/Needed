<div class="accounts-page">
	<div class="login-container">
		<h2 class="login-title">{{ 'customer.register.title' | t }}</h2>

		{% form 'create_customer' %}
			{{ form.errors | default_errors }}

			<div class="input-row">
				<label for="FirstName">
					{{ 'customer.register.first_name' | t }}
				</label>
				<input type="text"
					   name="customer[first_name]"
					   id="FirstName"
					   class="input"
					   required
					   autofocus
					   {% if form.first_name %}value="{{ form.first_name }}"{% endif %}>
			</div>


			<div class="input-row">
				<label for="LastName">
					{{ 'customer.register.last_name' | t }}
				</label>
				<input type="text"
					   name="customer[last_name]"
					   id="LastName"
					   class="input"
					   {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>
			</div>

			<div class="input-row">
				<label for="Email">
					{{ 'customer.register.email' | t }}
				</label>
				<input type="email"
					   name="customer[email]"
					   id="Email"
					   class="input {% if form.errors contains 'email' %}input-error{% endif %}"
					   value="{% if form.email %}{{ form.email }}{% endif %}"
					   spellcheck="false"
					   autocomplete="off"
					   required
					   autocapitalize="off">
			</div>


			<div class="input-row">
				<label for="CreatePassword">
					{{ 'customer.register.password' | t }}
				</label>
				<input type="password"
					   name="customer[password]"
					   required
					   id="CreatePassword"
					   class="input {% if form.errors contains 'password' %}input-error{% endif %}"
			</div>


			<div class="login-buttons">
				<input type="submit" value="{{ 'customer.register.submit' | t }}" class="button button--primary button--small button--rounded">
			</div>
		{% endform %}
	</div>
</div>


