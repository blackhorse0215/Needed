<div class="accounts-page">
	<div class="login-container">
		<div class="form-reset-password">
			{% form 'reset_customer_password' %}

				<h2>{{ 'customer.reset_password.title' | t }}</h2>

				<p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

				{{ form.errors | default_errors }}

				<div class="input-row">
					<label for="ResetPassword">
						{{ 'customer.reset_password.password' | t }}
					</label>
					<input type="password"
						   name="customer[password]"
						   id="ResetPassword"
						   class="input {% if form.errors contains 'password' %}input-error{% endif %}">
				</div>

				<div class="input-row">
					<label for="PasswordConfirmation">
						{{ 'customer.reset_password.password_confirm' | t }}
					</label>
					<input type="password"
						   name="customer[password_confirmation]"
						   id="PasswordConfirmation"
						   class="input {% if form.errors contains 'password_confirmation' %}input-error{% endif %}">
				</div>

				<div class="login-buttons">
					<input type="submit" class="button button--primary button--rounded button--small" value="{{ 'customer.reset_password.submit' | t }}">
				</div>
			{% endform %}
		</div>

	</div>
</div>
