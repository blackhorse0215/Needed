<section class="why-omega3-needed">
    <div class="container">
        <div class="row js-animate animate-fade-in">
            {% if section.settings.section_subtitle != blank %}
                <p class="why-omega3-needed__subtitle pro-ico">{{ section.settings.section_subtitle }}</p>
            {% endif %}

            <h2 class="why-omega3-needed__title pro-ico">{{ section.settings.section_title }}</h2>
        </div>
        {% if section.blocks.size > 0 %}
            <div class="why-omega3-needed__row carousel" data-slick='{"slidesToShow": 3,"slidesToScroll": 1, "infinite": true, "responsive":[{"breakpoint": 1025,"settings":{"slidesToShow": 2 }},{"breakpoint": 768,"settings":{"slidesToShow":2 }} ]}'>
                {% for block in section.blocks  %}
                    <div class="why-omega3-needed__col">
                        <img class="lazyload" data-src="{{ block.settings.item_image | img_url: "master" }}" alt="item image">
                        <h4 class="why-omega3-needed__item-title" data-keyword-context>{{ block.settings.item_title }}</h4>
                        <span class="why-omega3-needed__item-content">{{ block.settings.item_text }}</span>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        {% if section.settings.section_bottom_title != blank or section.settings.section_bottom_sub_title != blank or section.settings.section_bottom_desc != blank %}
        <div class="better-products-bottom-contents">
            {% if section.settings.section_bottom_title != blank %}
            <h1 class="btm-heading">{{ section.settings.section_bottom_title }}</h1>
            {% endif %}
            {% if section.settings.section_bottom_sub_title != blank %}
            <h1 class="btm-sub-heading">{{ section.settings.section_bottom_sub_title }}</h1>
            {% endif %}
            <div class="btm-contents">
                <h3 class="btm-desc">{{ section.settings.section_bottom_desc }}{% if section.settings.quiz_url != nil %}<a href="/pages/{{ section.settings.quiz_url }}" class="quiz-link">{{ section.settings.quiz_text }} {% include 'icon-arrow' direction: 'right' %}</a>{% endif %}</h3>
            </div>
        </div>
        {% endif %}
    </div>
</section>

<style>
  @media(max-width: 500px) {
      .why-omega3-needed {
          padding-top: 20px !important;
          margin-top: 0px !important;
      }    
  }
#MainContent .why-omega3-needed {
    background-color: {{ section.settings.background_color }};
}
{% for block in section.blocks %}
    {% if block.settings.icon_hover != blank %}
        .why-omega3-needed__item .why-omega3-needed__item-icon--{{ block.id }} {
            background-image: url({{ block.settings.icon_hover | img_url: "x800" }}) !important;
        }
    {% endif %}
{% endfor %}
@media(max-width: 991px) {
    .why-omega3-needed__title {
        font-size: 26px !important;
        line-height: 1.3 !important;
    }
    .why-omega3-needed__row {
        margin-top: 0 !important;
    }
    .why-omega3-needed__col {
        margin-top: 40px; 
    }
    .why-omega3-needed__item-title {
        text-align: center !important;
        margin-top: 15px !important;
        line-height: 1.6 !important;
    }
}
</style>
<script>
    $(document).ready(function() {
        if($(window).width() > 768) {
            $(".why-omega3-needed__row").slick();
        }
    });
</script>
{% schema %}
    {
        "name": "Why Omega-3 is needed",
        "settings": [
            {
                "type": "text",
                "id": "section_title",
                "label": "Heading",
                "default": "Why a Omega-3 is needed."
            },
            {
                "type": "textarea",
                "id": "section_subtitle",
                "label": "Subheading",
                "default": "Why a Omega-3 is needed."
            },
            {
                "type": "color",
                "id": "background_color",
                "label": "Background Color"
            }
            ],
            "blocks": [
                {
                    "type": "icon_link",
                    "name": "Item",
                    "settings": [
                        {
                            "type": "image_picker",
                            "id": "item_image",
                            "label": "Image"
                        },
                        {
                            "type": "text",
                            "id": "item_title",
                            "label": "Heading"
                        },
                        {
                            "type": "textarea",
                            "id": "item_text",
                            "label": "Text"
                        }
                    ]
                }
            ]
    }

{% endschema %}