                                <!-- 5/1 -->
                            {% endif %}

                            {% if item.product.handle contains 'base-plan' %}
                                <span class="product-saving-rate" data-label="Saving-rate">
                                    You save ${{ saving_base_rate }}
                                </span>
                            {% elsif item.product.handle contains 'bestsellers-bundle' %}
                                <span class="product-saving-rate" data-label="Saving-rate">
                                    You save ${{ saving_bestsellers_rate }}
                                </span>
                            {% elsif item.product.handle contains 'mens-complete-plan' %}
