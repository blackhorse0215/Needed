{{ 'stickyFoot-script.js' | asset_url | script_tag }}
{{ 'cart-custom.scss.css' | asset_url | stylesheet_tag }}

<div class="container">

    {% if cart.item_count > 0 %}
        <h1 class="text-center cart-title">{{ 'cart.general.title' | t }}</h1>
        <!-- automatic $10 discount off the one-time price of the prenatal multi capsules product -->
        {% assign bundle_ids = '' %}
        {% for item in cart.items %}
            {% assign bundle_ids = bundle_ids | append: item.product_id %}
            {% assign bundle_ids = bundle_ids | append: ',' %}
        {% endfor %}
        {% assign bundle_ids = bundle_ids | split: ',' %}

        <!-- automatic $10 discount off the one-time price of the prenatal multi capsules product -->
        <form action="/cart" method="post" class="cart-form" novalidate>
            <div class="cart-items">

            {% assign cart_has_trimester_bundles = false %}
            {% assign cart_has_6_month_supply = false %}
            {% assign cart_has_complete_plan_trimester_bundles = false %}
            {% assign cart_has_bundled_duos = false %}

            {% for item in cart.items %}
                {% assign product = item.product %}
                {% for collection in product.collections %}
                    {% if collection.title == '3 Month Supply' %}
                        {% assign cart_has_trimester_bundles = true %}
                    {% endif %}
                    {% if collection.title == 'The Completeâ„¢ Plan Trimester Bundle' %}
                        {% assign cart_has_complete_plan_trimester_bundles = true %}
                    {% endif %}
                    {% if collection.title == 'Duos' %}
                        {% assign cart_has_bundled_duos = true %}
                    {% endif %}
                    {% if collection.title == '6 Month Supply' %}
                        {% assign cart_has_6_month_supply = true %}
                    {% endif %}
                {% endfor %}
                {% if item.url contains '-trimester-plan-' %}
                    {% assign page_url = 'https://thisisneeded.com/pages/trimester-plans' %}
                {% else %}
                    {% if item.url contains 'preconception-prep-plan' %}
                        {% assign page_url = 'https://thisisneeded.com/pages/trimester-plans' %}
                    {% else %}
                        {% if item.url contains 'the-womens-health-plan' %}
                          {% assign page_url = 'https://thisisneeded.com/pages/trimester-plans' %}
                        {% else %}
                            {% if item.url contains 'mens-complete-plan' %}
                                {% assign page_url = item.url | within: collections.all %}
                            {% else %}
                                {% if item.url contains 'complete-plan' %}
                                    {% assign page_url = 'https://thisisneeded.com/pages/the-complete-plan' %}
                                {% else %}
                                    {% if item.url contains 'starter-plan' %}
                                        {% assign page_url = 'https://thisisneeded.com/pages/the-starter-plan' %}
                                    {% else %}
                                        {% if item.url contains 'conception-support-for-two' %}
                                            {% assign page_url = 'https://thisisneeded.com/pages/conception-support-for-two' %}
                                        {% else %}
                                            {% assign page_url = item.url | within: collections.all | remove: '-trimester-bundle-3-month-supply' | remove: '-6-month-supply' | remove: '-2'%}
                                        {% endif %}
                                    {% endif %}
                                {% endif %}
                            {% endif %}                            
                        {% endif %}
                    {% endif %}
                {% endif %}
                
                <div class="cart-item" data-variant-id="{{ item.variant_id }}" data-product-id="{{ item.product_id }}">
                    <div class="cart-item__image-td">
                        <div class="cart-item__image-wrapper">

                            <a href="{{ page_url }}">
                                {% if item.image != blank %}
                                <img src="{{ item | img_url: '240x' }}" alt="{{ item.alt }}">
                                {% endif %}
                            </a>
                        </div>
                    </div>
                    <div class="item-detail--info">
                        <div class="product-info" data-label="{{ 'customer.order.product' | t }}">
                            <a href="{{ page_url }}" class="cart-item__title">
                                <h2>
                                    {% if item.product.handle contains 'base-plan' %}
                                        The Base Nutrition Plan Subscription
                                    {%- comment -%}
                                    {% elsif item.product.handle contains 'complete-plan' %}
                                        {% if item.product.handle contains 'capsule' %}
                                            {{ 'The Complete Plan' | append: ' (Capsules)' }}
                                        {% else %}
                                            The Complete Plan
                                        {% endif %}
                                    {%- endcomment -%}
                                    {% else %}
                                        {{ item.product.title }}
                                    {% endif %}
                                </h2>
                            </a>
                            {% if item.product.handle contains 'base-plan' %}
                                <ul class="bundle-lists">
                                    <li><a href="https://thisisneeded.com/products/prenatal-multi">Prenatal Multi Powder</a></li>
                                    <li><a href="https://thisisneeded.com/products/omega-3-vegan-capsules-women">Omega-3</a></li>
                                </ul>
                            {% elsif item.product.handle contains 'bestsellers-bundle' %}
                                <ul class="bundle-lists">
                                    {% if item.product.handle contains 'capsule' %}
                                        <li><a href="https://thisisneeded.com/products/prenatal-multi-capsules">Prenatal Multi (Capsule)</a></li>    
                                    {% else %}
                                        <li><a href="https://thisisneeded.com/products/prenatal-multi">Prenatal Multi (Powder)</a></li>    
                                    {% endif %}
                                    <li><a href="https://thisisneeded.com/products/prenatal-pre-probiotic">Pre/Probiotic</a></li>
                                </ul>
                            {% elsif item.product.handle contains 'starter-plan' %}
                                <ul class="bundle-lists">
                                    {% if item.product.handle contains 'essentials' %}
                                        <li><a href="https://thisisneeded.com/products/prenatal-multi-essentials">Prenatal Multi (Essentials)</a></li>
                                    {% else %}
                                        {% if item.product.handle contains 'powder' %}
                                            <li><a href="https://thisisneeded.com/products/prenatal-multi">Prenatal Multi (Powder)</a></li>    
                                        {% else %}
                                            <li><a href="https://thisisneeded.com/products/prenatal-multi-capsules">Prenatal Multi (Capsule)</a></li>    
                                        {% endif %}
                                    {% endif %}
                                    <li><a href="https://thisisneeded.com/products/omega-3-vegan-capsules-women">Omega-3</a></li> 
                                </ul>
                            {% elsif item.product.handle contains 'complete-plan' %}
                                <ul class="bundle-lists">
                                    {% if item.product.handle contains 'capsule' %}
                                        <li><a href="https://thisisneeded.com/products/prenatal-multi-capsules">Prenatal Multi (Capsule)</a></li>
                                    {% else %}
                                        <li><a href="https://thisisneeded.com/products/prenatal-multi">Prenatal Multi Powder</a></li>
                                    {% endif %}
                                    <li><a href="https://thisisneeded.com/products/omega-3-vegan-capsules-women">Omega-3</a></li>
                                    <li><a href="https://thisisneeded.com/products/collagen-protein">Collagen Protein</a></li>
                                    <li><a href="https://thisisneeded.com/products/prenatal-pre-probiotic">Pre/Probiotic</a></li>
                                </ul>
                            {% elsif item.product.handle contains 'conception-support-plan' %}
                                <ul class="bundle-lists">
                                    <li><a href="https://thisisneeded.com/products/prenatal-multi">2x Prenatal Multi</a></li>
                                    <li><a href="https://thisisneeded.com/products/collagen-protein">2x Collagen Protein</a></li>
                                    <li><a href="https://thisisneeded.com/products/omega-3-vegan-capsules-women">Omega-3 For Her</a></li>
                                    <li><a href="https://thisisneeded.com/products/omega-3-for-men">Omega-3 For Him</a></li>
                                    <li><a href="https://thisisneeded.com/products/prenatal-pre-probiotic">Pre / Probiotic For Her</a></li>
                                    <li><a href="https://thisisneeded.com/products/mens-pre-probiotic">Pre / Probiotic For Him</a></li>
                                </ul>
                            {% elsif item.product.handle contains 'mens-support-plan' %}
                                <ul class="bundle-lists">
                                    <li><a href="https://thisisneeded.com/products/omega-3-for-men">Omega-3 For Him</a></li>
                                    <li><a href="https://thisisneeded.com/products/mens-pre-probiotic">Pre / Probiotic For Him</a></li>
                                </ul>
                            {% endif %}
                            {% unless item.product.handle contains '6-month' or item.product.handle contains '3-month' or item.product.handle contains '-2'%}
                                <p class="cart-item__option">{{ item.product.metafields.airf.item_info }}</p>
                            {% endunless %}
                            {% if item.product.handle == 'base-plan' %}
                                    {% comment %} <p class="cart-item__option">The base nutrients you need, before, during and after pregnancy. Monthly supply.</p> {% endcomment %}
                            {% elsif item.product.handle == 'complete-plan' %}
                                    {% comment %} <p class="cart-item__option">Complete pre and postnatal nutrition. Monthly supply.</p> {% endcomment %}
                            {% endif %}

                            {% unless item.product.has_only_default_variant %}
                                {% comment %} {% for option in item.product.options %}
                                    <p class="cart-item__option">{{ option }}: {{ item.variant.options[forloop.index0] }}</p>
                                {% endfor %} {% endcomment %}
                            {% endunless %}
                            {%- assign property_size = item.properties | size -%}

                            {% if property_size > 0 %}
                                {% assign interval_unit_type = '' %}
                                {% assign interval_frequency = '' %}

                                {% for p in item.properties %}
                                    {% if p.first == "subscription_id" %}
                                        {% continue %}
                                    {% endif %}

                                    {% if p.first == "shipping_interval_unit_type" %}
                                        {% assign interval_unit_type = p.last %}
                                        {% continue %}
                                    {% endif %}

                                    {% if p.first == "shipping_interval_frequency" %}
                                        {% assign interval_frequency = p.last %}
                                        {% continue %}
                                    {% endif %}

                                    {% unless p.last == blank %}
                                        <p class="cart-item__option">
                                            {{ p.first }}:

                                            {% if p.last contains '/uploads/' %}
                                                <a href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
                                            {% else %}
                                                {{ p.last }}
                                            {% endif %}
                                        </p>
                                    {% endunless %}
                                {% endfor %}

                                {% if interval_unit_type != '' and interval_frequency != '' %}
                                    {% if interval_frequency == '30' %}
                                        <p class="cart-item__option include-icon"> <img src="https://cdn.shopify.com/s/files/1/0195/3293/9328/files/icon-subscription.png?v=1619144567" alt="ship-icon"> Subscription. Delivered to your door every 30 days.</p>    
                                    {% elsif interval_frequency == '3' %}
                                        <p class="cart-item__option include-icon"> <img src="https://cdn.shopify.com/s/files/1/0195/3293/9328/files/icon-subscription.png?v=1619144567" alt="ship-icon"> Subscription. Ships every 3 months.</p>
                                    {% elsif interval_frequency == '6' %}
                                        <p class="cart-item__option include-icon"> <img src="https://cdn.shopify.com/s/files/1/0195/3293/9328/files/icon-subscription.png?v=1619144567" alt="ship-icon"> Subscription. Ships every 6 months.</p>
                                    {% endif %}
                                    
                                    {% comment %} <p class="cart-item__option">Recurring Monthly Subscription</p> {% endcomment %}
                                {% endif %}
                            {% endif %}

                            <div class="product-qty" data-label="{{ 'cart.label.quantity' | t }}">
                                <input type="number"
                                        name="updates[]"
                                        id="updates_{{ item.key }}"
                                        class="cart-item__qty js-input-qty"
                                        value="{{ item.quantity }}"
                                        min="0"
                                        aria-label="{{ 'cart.general.item_quantity' | t }}">
                                <div class="quantity-nav">
                                    <div class="quantity-button quantity-down">
                                        <svg viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg"><defs><style>.cls-1{fill:none;stroke:#000;stroke-linecap:round;stroke-linejoin:round;stroke-width:2px;}</style></defs><title></title><g id="chevron-bottom"><line class="cls-1" x1="16" x2="7" y1="20.5" y2="11.5"></line><line class="cls-1" x1="25" x2="16" y1="11.5" y2="20.5"></line></g></svg>
                                    </div>
                                    <div class="quantity-button quantity-up">
                                        <svg viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg"><defs><style>.cls-1{fill:none;stroke:#000;stroke-linecap:round;stroke-linejoin:round;stroke-width:2px;}</style></defs><title></title><g id="chevron-bottom"><line class="cls-1" x1="16" x2="7" y1="20.5" y2="11.5"></line><line class="cls-1" x1="25" x2="16" y1="11.5" y2="20.5"></line></g></svg>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="product-price mobile-price" data-label="{{ 'cart.label.price' | t }}">
                                {% if item.original_line_price != item.line_price and false %}
                                    <span class="visually-hidden">{{ 'cart.label.discounted_price' | t }}</span>
                                    {{ item.price | money }}
                                    <span class="visually-hidden">{{ 'cart.label.original_price' | t }}</span>
                                    <s>{{ item.original_price | money }}</s>
                                {% else %}
                                    <span class="price">{{ item.price | money }}</span>
                                {% endif %}

                                {% if item.original_line_price != item.line_price %}
                                    {% unless item.product.handle contains 'gift-card' %}
                                        <span class="product-saving-rate" data-label="Saving-rate">
                                            {% assign org_price = item.original_price | divided_by: 100.00 %}
                                            {{ item.price | divided_by: org_price | round }}% savings
                                        </span>
                                    {% endunless %}
                                {% endif %}
                            </div>

                        </div>

                        <div class="product-price" data-label="{{ 'cart.label.price' | t }}">
                        
                            {% assign retail_base = 0.00 %}
                            {% assign retail_complete = 0.00 %}
                            {% assign retail_starter = 0.00 %}
                            {% if item.product.handle contains 'capsule' %}
                                {% assign retail_base = retail_base | plus : all_products['prenatal-multi-capsules'].variants[0].price %}    
                            {% else %}
                                {% assign retail_base = retail_base | plus : all_products['prenatal-multi'].variants[0].price %}
                            {% endif %}

                            {% assign bestselllers = retail_base | plus : all_products['prenatal-pre-probiotic'].variants[0].price %}

                            {% assign bundle_base = all_products['base-plan'].variants[0].price | plus: 0.00 %}

                            {% if item.product.handle contains 'capsule' %}
                                {% assign bundle_bestsellers = all_products['the-bestsellers-bundle-prenatal-multi-capsule'].variants[0].price | plus: 0.00 %}
                            {% else %}
                                {% assign bundle_bestsellers = all_products['the-bestsellers-bundle-prenatal-multi-pre-probiotic'].variants[0].price | plus: 0.00 %}
                            {% endif %}

                            {% if item.product.handle contains 'complete-plan' %}
                                {% if item.product.handle contains 'capsule' %}
                                    {% assign retail_complete = all_products['prenatal-multi-capsules'].variants[0].price %}    
                                {% else %}
                                    {% assign retail_complete = all_products['prenatal-multi'].variants[0].price %}
                                {% endif %}
                                
                                {% assign retail_complete = retail_complete | plus: all_products['prenatal-pre-probiotic'].variants[0].price | plus : all_products['collagen-protein'].variants[0].price %}
                                {% assign retail_complete = retail_complete | plus: all_products['omega-3-vegan-capsules-women'].variants[0].price | plus: 0.00 %}

                                {% if item.product.handle contains 'capsule' %}
                                    <!-- {% assign bundle_complete = all_products['complete-plan-prenatal-multi-capsule'].variants[0].price | plus: 0.00 %} -->
                                    {% assign bundle_complete = all_products['complete-planall-capsules'].variants[0].price | plus: 0.00 %}
                                {% elsif item.product.handle contains 'essential' %}
                                    {% assign bundle_complete = all_products['complete-planessentials-multi'].variants[0].price | plus: 0.00 %}
                                {% else %}
                                    <!-- {% assign bundle_complete = all_products['complete-plan-prenatal-multi-pre-probiotics-collagen-protein'].variants[0].price | plus: 0.00 %} -->
                                    {% assign bundle_complete = all_products['complete-plan'].variants[0].price | plus: 0.00 %}
                                {% endif %}    
                            {% endif %}

                            {% if item.product.handle contains 'starter-plan' %}
                                {% assign retail_starter = all_products['prenatal-multi-capsules'].variants[0].price | plus : all_products['omega-3-vegan-capsules-women'].variants[0].price | plus: 0.00 %}

                                {% if item.product.handle contains 'multi-powder' %}
                                    {% assign bundle_starter = all_products['starter-plan-multi-powder-omega-capsules'].variants[0].price | plus: 0.00 %}
                                {% elsif item.product.handle contains 'essential' %}
                                    {% assign bundle_starter = all_products['the-starter-plan-essentials-multi'].variants[0].price | plus: 0.00 %}
                                {% else %}
                                    {% assign bundle_starter = all_products['starter-plan-all-capsules'].variants[0].price | plus: 0.00 %}
                                {% endif %}
                            {% endif %}

                            {% assign saving_base_rate = retail_base | minus : bundle_base | divided_by : 1000 | times: 10 | round %}
                            {% comment %} {% assign saving_base_rate = 100 | minus: saving_base_rate %} {% endcomment %}
                            {% if item.product.handle contains 'capsule' %}
                                {% assign saving_bestsellers_rate = bestselllers | minus : bundle_bestsellers | divided_by : 1000 | times: 10 | round %}
                                {% comment %}{% assign saving_complete_rate = retail_complete | minus : bundle_complete | divided_by : 1000 | times: 10 | round %}{% endcomment %}
                                {% assign saving_complete_rate = item.product.compare_at_price | minus : item.product.price | money_without_currency | round %}
                                {% assign saving_prenatal_multi_capsules_subscription = retail_base | minus: item.price | divided_by : 1000 | times: 10 | round %}
                                {% comment %}{% assign saving_starter_rate = retail_starter | minus : bundle_starter | divided_by : 1000 | times: 10 | round %}{% endcomment %}
                                {% assign saving_starter_rate = item.product.compare_at_price | minus : item.product.price | money_without_currency | round %}
                            {% elsif item.product.handle contains 'essential' %}
                                {% assign saving_complete_rate = item.product.compare_at_price | minus : item.product.price | money_without_currency | round %}
                                {% assign saving_starter_rate = item.product.compare_at_price | minus : item.product.price | money_without_currency | round %}
                            {% else %}
                                {% assign saving_bestsellers_rate = bestselllers | minus : bundle_bestsellers | divided_by : 1000 | times: 10 | round %}
                                {% comment %}{% assign saving_complete_rate = retail_complete | minus : bundle_complete | divided_by : 1000 | times: 10 | round %}{% endcomment %}
                                {% assign saving_complete_rate = item.product.compare_at_price | minus : item.product.price | money_without_currency | round %}
                                {% comment %}{% assign saving_starter_rate = retail_starter | minus : bundle_starter | divided_by : 1000 | times: 10 | round %}{% endcomment %}
