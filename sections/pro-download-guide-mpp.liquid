<section class="download-guide text-center download-guide-pp">
  <div class="container">
    <div class="row js-animate animate-fade-in">
      {% if section.settings.section_title != blank %}
      <h1>{{ section.settings.section_title }}</h1>
      {% endif %}
      {% if section.settings.section_subtitle != blank %}
      <p class="sub-title">{{ section.settings.section_subtitle }}</p>
      {% endif %}
    </div>

    {% if section.settings.download_link != blank %}
    <div class="download-btn js-animate animate-fade-in animated" data-btn="{{ section.settings.download_link }}"><a href="{{ section.settings.download_link }}" target="_blank" download><span><img src="{{ 'icon-download.svg' | asset_url }}">{{ section.settings.download_link_txt }}</span></a></div>
    {% endif %}      
  </div>
</section>
<style>
  .download-guide-pp {
    padding-top: 0 !important;
  }
  .download-guide-pp h1 {
    margin: 0 auto;
    max-width: 770px !important;
    font-size: 35px;
    line-height: 1.3;
  }
  @media (max-width: 768px) {
  .download-guide-pp h1 {
      font-size: 26px;
  }
  }
</style>
{% schema %}
{
    "name": "Download Guide | PP",
    "settings": [
        {
            "type": "text",
            "id": "section_title",
            "label": "Heading",
            "default": "Ready to talk to your health practitioner about our better Prenatal Pre / Probiotic?"
        },
        {
            "type": "textarea",
            "id": "section_subtitle",
            "label": "Subheading"
        },
        {
            "type": "text",
            "id": "download_link_txt",
            "label": "Download link text",
            "default": "Download our Guide"
        },
        {
            "type": "url",
            "id": "download_link",
            "label": "Add guide link here"
        }
    ]
}
{% endschema %}
