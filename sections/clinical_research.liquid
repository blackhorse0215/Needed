<section class="clinical-research">
    <div class="container">
        <div class="row">
            <div class="section_heading js-animate animate-fade-in">
                {% if section.settings.heading != blank %}
                <h1><span class="banner__title-shape">{{ section.settings.heading }}</span></h1>
                {% endif %}
                {% if section.settings.description != blank %}
                <p>{{ section.settings.description }}</p>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="accordion__wrapper">
                <div class="page__accordion accordion" data-accordion>
                {% if section.blocks.size > 0 %}        
                    {% for block in section.blocks %}
                    <div class="accordion__pane js-animate animate-fade-in" data-pane>
                        {% if block.settings.title != blank %}
                        <div class="accordion__title" data-toggler>
                            <span>{{ block.settings.title }}</span>
                            <span class="accordion__state" data-state></span>
                        </div>
                        {% endif %}
                        {% if block.settings.answer != blank %}
                        <div class="accordion__content" data-content>{{ block.settings.answer }}</div>
                        {% endif %}
                    </div>
                    {% endfor %}
                {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>

{% if section.settings.background-img != nil %}
<style>
    .clinical-research {
        background-image: url("{{ section.settings.background-img | img_url: '2000x'}}");
    }

    section.clinical-research .section_heading{
        max-width: 800px;
    }

    section.clinical-research .section_heading h1{
        font-size: 35px;
    }

    section.clinical-research .section_heading .banner__title-shape:after{
        display: none;
    }

    section.clinical-research .section_heading p{
        padding: 0px 60px;
    }

    section.clinical-research .accordion__wrapper{
        padding-top: 35px;
    }

    section.clinical-research .accordion__wrapper .page__accordion.accordion .accordion__pane{
        padding: 30px 60px;
        margin-bottom: 1px;
    }

    section.clinical-research .accordion__wrapper .accordion__title{
        font-size: 18px;
    }

    .clinical-research .page__accordion .accordion__pane .accordion__title span:not(.accordion__state){
        max-width: 92%;
        font-size: 18px;
    }

    @media (max-width: 768px){
        section.clinical-research{
            padding: 80px 25px 90px;
        }

        section.clinical-research .section_heading h1{
            font-size: 22px;
        }

        section.clinical-research .section_heading p{
            margin-top: 25px;
            font-size: 15px;
            padding: 0px;
            line-height: 1.5;
        }

        section.clinical-research .accordion__wrapper .page__accordion.accordion .accordion__pane{
            padding: 25px 20px;
            margin-bottom: 3px;
        }

        section.clinical-research .accordion__wrapper .accordion__pane .accordion__title span:not(.accordion__state){
            max-width: 80%;
            font-size: 16px;
        }
    }
</style>
{% endif %}

{% schema %}
 {
    "name": "Clinical research",
    "settings": [    
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Clinical research on Omega-3s for before, during, and after pregnancy"
        },
        {
            "type": "textarea",
            "id": "description",
            "label": "Description"
        },
        {
            "type": "image_picker",
            "id": "background-img",
            "label": "Background Image"
        }
    ],
    "blocks": [
        {
        "type": "Quiz",
        "name": "Quiz",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Question title"
            },
            {
                "type": "textarea",
                "id": "answer",
                "label": "Answer"
            }
        ]
    }
    ]
}
{% endschema %}
