<section class="intro-experts">
    <div class="container">
        <div class="row">
            <div class="section_heading js-animate animate-fade-in">
                {% if section.settings.heading != blank %}
                <h1>{{ section.settings.heading }}</h2>
                {% endif %}
                {% if section.settings.sub_heading != blank %}
                <p>{{ section.settings.sub_heading }}</p>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="text-with-image first-one js-animate animate-fade-in">
                <div class="col-12 col-lg-3 member__image">
                    <div class="item__image_wrapper">
                        {% if section.settings.mem_1_photo != nil %}
                        <img src="{{ section.settings.mem_1_photo | img_url: '800x' }}" alt="{{ section.settings.mem_1_photo.alt }}">
                        {% endif %}
                    </div>
                </div>
                <div class="col-12 col-lg-9 member__content">
                    {% if section.settings.mem_1_title != blank %}
                    <h2>{{ section.settings.mem_1_title }}</h2>
                    {% endif %}
                    {% if section.settings.mem_1_subtitle != blank %}
                    <h3>{{ section.settings.mem_1_title }}</h3>
                    {% endif %}
                    {% if section.settings.mem_1_desc != blank %}
                    <p class="item__description">{{ section.settings.mem_1_desc }}</p>
                    {% if section.settings.mem_1_desc contains 'show-more' %}
                    <a href="javascript:;" class="show_more">Show more</a>
                    {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="text-with-image last-one js-animate animate-fade-in">
                <div class="col-12 col-lg-9 member__content">
                    {% if section.settings.mem_2_title != blank %}
                    <h2>{{ section.settings.mem_2_title }}</h2>
                    {% endif %}
                    {% if section.settings.mem_2_subtitle != blank %}
                    <h3>{{ section.settings.mem_2_subtitle }}</h3>
                    {% endif %}
                    {% if section.settings.mem_2_desc != blank %}
                    <p class="item__description">{{ section.settings.mem_2_desc }}</p>
                    {% if section.settings.mem_2_desc contains 'show-more' %}
                    <a href="javascript:;" class="show_more">Show more</a>
                    {% endif %}
                    {% endif %}
                </div>
                <div class="col-12 col-lg-3 member__image">
                    <div class="item__image_wrapper">
                        {% if section.settings.mem_2_photo != nil %}
                        <img src="{{ section.settings.mem_2_photo | img_url: '800x' }}" alt="{{ section.settings.mem_2_photo.alt }}">
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="section_bottom js-animate animate-fade-in">
                {% if section.settings.btm_title != blank %}
                <h1>{{ section.settings.btm_title }}</h2>
                {% endif %}
                {% if section.settings.more_members != blank %}
                <a href="/pages/{{ section.settings.more_members }}" class="more-members"><span>{{ section.settings.btn_txt }}</span></a>
                {% endif %}
            </div>
        </div>
    </div>    
</section>


<style>
    .intro-experts {
    background-color: {{ section.settings.background_color }};
    }

    section.intro-experts .section_heading h1{
        font-size: 35px;
        color: #193438;
    }

    section.intro-experts .section_heading p{
        margin-top: 25px;
        font-size: 18px;
    }

    @media (min-width: 769px){
        section.intro-experts .text-with-image{
            padding: 65px 100px;
        }
    }

    section.intro-experts .section_bottom{
        padding-top: 115px;
    }

    section.intro-experts .section_bottom h1{
        font-size: 35px;
        color: #193438;
        line-height: 1.4;
        max-width: 800px;
    }

    @media (max-width: 768px){
        section.intro-experts{
            padding: 85px 0px 125px;
        }

        section.intro-experts .section_heading h1{
            font-size: 26px;
            color: #193438;
        }

        section.intro-experts .section_heading p{
            margin-top: 25px;
            font-size: 18px;
            color: #202F30;
        }

        section.intro-experts > .container > .row{
            margin: 0 0px;
        }

        section.intro-experts .text-with-image .member__content{
            padding: 50px 35px;
        }

        section.intro-experts .text-with-image .member__content h2{
            text-align: center;
        }

        section.intro-experts .section_bottom{
            padding-top: 100px;
        }

        section.intro-experts .section_bottom h1{
            font-size: 26px;
        }
    }
</style>


