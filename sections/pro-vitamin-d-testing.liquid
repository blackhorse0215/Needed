<section class="pro-video-o3-testing vitamin-d-testing">
    <div class="container">
        <div class="content-wrapper">
            {% if section.settings.heading != blank or section.settings.sub_heading != blank %}
            <div class="heading-wrapper">
                {% if section.settings.heading != blank %}
                <h2><span class="banner__title-shape">{{ section.settings.heading }}</span></h2>
                {% endif %}
                {% if section.settings.sub_heading != blank %}
                <p>{{ section.settings.sub_heading }}</p>
                {% endif %}
            </div>
            {% endif %}
            {% if section.settings.description != blank %}
            <div class="desc-wrapper">
                <p>{{ section.settings.description }}</p>
            </div>
            {% endif %}
        </div>
    </div>
</section>
<style>
    .vitamin-d-testing .content-wrapper .desc-wrapper {
        margin-top: 50px;
    }
</style>
{% schema %}
  {
    "name": "Vitamin-d-testing-kit",
    "settings": [
      {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Why test your levels"
      },
      {
          "type": "text",
          "id": "sub_heading",
          "label": "Sub Heading",
          "default": "See out practitioner video explanation."
      },
      {
          "type": "textarea",
          "id": "description",
          "label": "Description"
      }
    ]
  }
{% endschema %}
