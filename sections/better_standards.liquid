        }

        .section-better-standards .columns-container .right-description p.flex-right{
            text-align: left;
            position: relative;
            font-size: 16px;
            line-height: 1.7;
        }

        .section-better-standards .columns-container .right-description .sub-block{
            position: relative;
        }

        .section-better-standards .columns-container .right-description .sub-block:before{
            display: block;
            content: '';
            width: 90px;
            height: 1px;
            border-top: 1px dashed #000;
            position: absolute;
            left: -90px;
        }

        .section-better-standards .columns-container .sub-block-1:after{
            transform: rotate(30deg) !important;
            top: 180px;
            right: -110px !important;
        }

        .section-better-standards .columns-container .sub-block-3:after{
            transform: rotate(-30deg) !important;
            top: 60px;
            right: -110px !important;
        }

        .section-better-standards .columns-container .sub-block-2:before{
            transform: rotate(-30deg) !important;
            top: 180px;
            left: -110px !important;
        }

        .section-better-standards .columns-container .sub-block-4:before{
            transform: rotate(30deg) !important;
            top: 60px;
            left: -110px !important;
        }
    }

    @media (max-width: 768px){
        .section-better-standards{
            padding: 30px 0px 50px;
        }
        
        .section-better-standards .columns-container .sub-block .block-image{
            width: 80px;
            height: 80px;
            background-size: auto 40px;
        }

        .section-better-standards .columns-container{
            margin-top: 25px;
        }

        .section-better-standards .top-heading .banner__title .banner__title-shape{
            font-size: 26px;
            line-height: 1.4;
        }

        .section-better-standards .columns-container .left-description{
            width: 50%;
            order: 2;
        }

        .section-better-standards .columns-container .main-image{
            width: 100%;
            order: 1;
        }

        .section-better-standards .columns-container .right-description{
            width: 50%;
            order: 3;
        }

        .section-better-standards .columns-container .main-image img{
            width: 65%;
        }

        .section-better-standards .columns-container .block-title{
            font-size: 17px !important;
            margin-bottom: 13px !important;
        }

        .section-better-standards .columns-container .block-image{
            margin-bottom: 10px;
        }

        .section-better-standards .columns-container .left-description{
            margin-top: 40px;
            padding-right: 15px;
            position: relative;
        }

        .section-better-standards .columns-container .left-description:before{
            content: '';
            display: block;
            border: 1px dashed #000;
            width: 0px;
            height: 33px;
            transform: rotate(25deg);
            position: absolute;
            top: -42px;
            left: 65%;
        }

        .section-better-standards .columns-container .right-description{
            margin-top: 40px;
            padding-left: 15px;
            position: relative;
        }

        .section-better-standards .columns-container .right-description:before{
            content: '';
            display: block;
            border: 1px dashed #000;
            width: 0px;
            height: 33px;
            transform: rotate(-25deg);
            position: absolute;
            top: -42px;
            left: 35%;
        }

        .section-better-standards .columns-container .left-description .flex-left{
            text-align: left;
            font-size: 16px;
            line-height: 1.7;
            padding-top: 0px;
        }

        .section-better-standards .columns-container .right-description .flex-right{
            text-align: left;
            font-size: 16px;
            line-height: 1.7;
            padding-top: 0px;
        }

        .section-better-standards .columns-container .right-description .flex-right + .flex-right{
            margin-top: 40px;
        }

        .section-better-standards .columns-container .sub-block + .sub-block{
            margin-top: 45px;
        }
    }

    @media (max-width: 450px){
        .section-better-standards .columns-container .sub-block p{
            min-height: 220px;
        }
    }
</style>


