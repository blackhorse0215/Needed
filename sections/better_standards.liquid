<section class="section-better-standards" data-section-id="{{ section.id }}" data-section-type="banner">
  <div class="container">
    <div class="row">
        <div class="col-12">
            <div class="top-heading js-animate animate-fade-in">
                {%- if section.settings.title != blank -%}
                <h1 class="banner__title"><span class="banner__title-shape">{{ section.settings.title }}</span></span></h1>
                {%- endif -%}
                
                {%- if section.settings.sub_heading != blank -%}
                <p>{{ section.settings.sub_heading }}</p>
                {%- endif -%}
            </div>
        </div>
    </div>

    <div class="columns-container">
        <div class="left-description">
            <div class="sub-block sub-block-1">
                <div class="block-image js-animate animate-fade-in" style="background-image: url({{ section.settings.sub_image1 | img_url : 'master' }});">
                </div>
                <h3 class="block-title js-animate animate-fade-in">
                    {{ section.settings.sub_title1 }}
                </h3>
                <p class="flex-left js-animate animate-fade-in">
                    {{ section.settings.description1 }}
                </p>
            </div>
            <div class="sub-block sub-block-3">
                <div class="block-image js-animate animate-fade-in" style="background-image: url({{ section.settings.sub_image3 | img_url : 'master' }});">
                </div>
                <h3 class="block-title js-animate animate-fade-in">
                    {{ section.settings.sub_title3 }}
                </h3>
                <p class="flex-left js-animate animate-fade-in">
                    {{ section.settings.description3 }}
                </p>
            </div>
        </div>
        <div class="main-image js-animate animate-fade-in">
            <img src="{{ section.settings.thumb_main_icon | img_url: '380x' }}">
        </div>
        <div class="right-description">
            <div class="sub-block sub-block-2">
                <div class="block-image js-animate animate-fade-in" style="background-image: url({{ section.settings.sub_image2 | img_url : 'master' }});">
                </div>
                <h3 class="block-title js-animate animate-fade-in">
                    {{ section.settings.sub_title2 }}
                </h3>
                <p class="flex-right js-animate animate-fade-in">
                    {{ section.settings.description2 }}
                </p>
            </div>
            <div class="sub-block sub-block-4">
                <div class="block-image js-animate animate-fade-in" style="background-image: url({{ section.settings.sub_image4 | img_url : 'master' }});">
                </div>
                <h3 class="block-title js-animate animate-fade-in">
                    {{ section.settings.sub_title4 }}
                </h3>
                <p class="flex-right js-animate animate-fade-in">
                    {{ section.settings.description4 }}
                </p>
            </div>
        </div>
    </div>
  </div>
</section>


<style>
    .section-better-standards {
        text-align: center;
        background-color: #FFF;
        padding: 105px 0px 0px;
    }
    
    .section-better-standards .top-heading .banner__title .banner__title-shape:after{
        display: none;
    }

    .section-better-standards .top-heading .banner__title .banner__title-shape{
        font-size: 35px;
        line-height: 1.3;
        letter-spacing: 0px;
    }

    .section-better-standards .columns-container{
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;
        margin-top: 42px;
    }

    .section-better-standards .columns-container .left-description{
        width: 34%;
    }

    .section-better-standards .columns-container .main-image{
        width: 32%;
    }

    .section-better-standards .columns-container .right-description{
        width: 34%;
    }

    .section-better-standards .columns-container .sub-block .block-image{
        width: 120px;
        height: 120px;
        background-position: center;
        background-repeat: no-repeat;
        background-size: auto 60px;
        background-color: #F2E1E8;
        border-radius: 50%;
        margin: 0px auto;
        margin-bottom: 20px;
    }

    .section-better-standards .columns-container .sub-block .block-title{
        font-family: "Copernicus-Bold";
        font-size: 20px;
        color: #193438;
        margin-bottom: 20px;
    }

    @media (min-width: 769px){

