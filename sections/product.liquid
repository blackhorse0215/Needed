<script>

$(document).ready(function() {
	window.scrollTo({ top: 0, behavior: 'smooth' });

	var decimalTwoDisplay = function(fixedPrice, discount) {
		var tempPrice = fixedPrice * discount;
		return parseFloat(parseFloat(tempPrice).toFixed(2));
	}

	$(document).on('click', '.multi_month_option .btn-group p', function() {
		console.log('click');
		$('.multi_month_option .btn-group p').attr('class', '');
		$(this).attr('class', 'active');
		var monthIndex = $(this).data('index');
		var monthText =  $('.subscribe-text').data('text');

		var productTitle = $('.product-fixed-form').data('title');
		var variantId1 = $('.multi_month_option .btn-group p[data-index=1]').data('variant_id');
		var variantId3 = $('.multi_month_option .btn-group p[data-index=3]').data('variant_id');
		var variantId6 = $('.multi_month_option .btn-group p[data-index=6]').data('variant_id');
		var fixedPrice = $('.multi_month_option .btn-group p[data-index=3]').data('price').split('$')[1];
		console.log(variantId1);
		console.log(variantId3);
		console.log(variantId6);
		if(monthIndex == '1') {
			var discountPrice = decimalTwoDisplay(fixedPrice, 0.85);
			
			$('.rc_label.rc_label__autodeliver .discount-price').text('$' + discountPrice + ' /mo');
			$('.rc_label.rc_label__autodeliver #rc_price_autodeliver1').text('$' + discountPrice + ' /mo');
			$('.subscribe-text').text('30' + monthText);
			$('.product__action #AddToCart').text('$' + discountPrice + ' - Add to Cart');

			$('.product-fixed-form .sticky-bar-title').text(productTitle + ' (subscription - 1 month)');
			$('.product-fixed-form .all_price .price').text('$' + fixedPrice);
			$('.product-fixed-form .all_price .discount_price').text('$' + discountPrice + ' /mo');
			$('.product-fixed-form .all_price .discount').text('Save 15%');
			$('.product-fixed-form .product-fixed-form__action .data_add_to_cart_bundle').text('$' + discountPrice + ' - Add to Cart');
			$('.product-fixed-form .product-fixed-form__action .data_add_to_cart_bundle').attr('data-index', "1");
			$('.product-fixed-form .product-fixed-form__action .data_add_to_cart_bundle').attr('data-variantid', variantId1);
		} else if(monthIndex == "3") {
			var discountPrice = decimalTwoDisplay(fixedPrice, 0.75);
			var discountThreePrice = parseFloat((fixedPrice * 0.75 * 3).toFixed(2));

			$('.rc_label.rc_label__autodeliver .discount-price').text('$' + discountPrice + ' /mo');
			$('.rc_label.rc_label__autodeliver #rc_price_autodeliver1').text('$' + discountPrice + ' /mo');
			// $('.subscribe-text').text('90' + monthText);
			$('.subscribe-text').text('90 day supply, shipped every 3 months');
			$('.product__action #AddToCart').text('$' + discountThreePrice + ' - Add to Cart');
			
			$('.product-fixed-form .sticky-bar-title').text(productTitle + ' (subscription - 3 months)');
			$('.product-fixed-form .all_price .price').text('$' + fixedPrice);
			$('.product-fixed-form .all_price .discount_price').text('$' + discountPrice + ' /mo');
			$('.product-fixed-form .all_price .discount').text('Save 25%');
			$('.product-fixed-form .product-fixed-form__action .data_add_to_cart_bundle').text('$' + discountThreePrice + ' - Add to Cart');
			$('.product-fixed-form .product-fixed-form__action .data_add_to_cart_bundle').attr('data-index', "3");
			$('.product-fixed-form .product-fixed-form__action .data_add_to_cart_bundle').attr('data-variantid', variantId3);

		} else {
			var discountPrice = decimalTwoDisplay(fixedPrice, 0.6667);
			var discountThreePrice = parseFloat((fixedPrice * 0.6667 * 6).toFixed(2));

			$('.rc_label.rc_label__autodeliver .discount-price').text('$' + discountPrice + ' /mo');
			$('.rc_label.rc_label__autodeliver #rc_price_autodeliver1').text('$' + discountPrice + ' /mo');
			// $('.subscribe-text').text('180' + monthText);
			$('.subscribe-text').text('180 day supply, shipped every 6 months');
			$('.product__action #AddToCart').text('$' + discountThreePrice + ' - Add to Cart');

