	var addToProduct = function(variantId, pty, fre, unitType) {
		jQuery.ajax({
			type: 'POST',
			url: '/cart/add.js',
			data: {
				id: variantId,
				quantity: pty,
				properties: {
					shipping_interval_frequency: fre,
					shipping_interval_unit_type: unitType
				}
			},
			dataType: 'json',
			success: function() {
				location.href='/cart';
			}
		});
	}
	
	$('body.template-product [data-product-original-form]').on('click', '[data-add-to-cart]', function(e){
		var recurringOption = $('#rc_container .rc_block__type--active').find('input[type="radio"]').val();
		e.preventDefault();
		e.stopPropagation();

		var monthIndex = $('.multi_month_option .btn-group p.active').data('index');
		var variantId = $('.multi_month_option .btn-group p.active').data('variant_id');

		if(recurringOption == 'autodeliver') {
			if(monthIndex == '1') {
				console.log($('body.template-product [data-product-original-form]').serialize());
				$('body.template-product [data-product-original-form]').submit();
			} else if(monthIndex == '3') {
				addToProduct(variantId, 1, "3", "Months");
			} else {
				addToProduct(variantId, 1, "6", "Months");
			}
		} else {
			$('body.template-product [data-product-original-form]').submit();
		}
	});

	$('.product__information .why-preorder').click(function() {
		$('#stamped-main-widget').removeAttr('id').attr('id', 'stamped-main-widget-buf');
		$('.availability-popup #stamped-main-widget-buf').removeAttr('id').attr('id', 'stamped-main-widget');
		StampedFn.reloadUGC();
		$('#stamped-main-widget-buf').fadeOut();
		$('#stamped-main-widget').fadeIn();
		$('.availability-popup').addClass('active');
		$('.availability-popup-overlay').addClass('active');
		$('body').css('overflow', 'hidden');
	});
	$('.product__information .availability-popup .availability-popup-close').click(function() {
		$('#stamped-main-widget-buf').removeAttr('id').attr('id', 'stamped-main-widget');
		$('.availability-popup #stamped-main-widget').removeAttr('id').attr('id', 'stamped-main-widget-buf');
		StampedFn.reloadUGC();
		$('#stamped-main-widget-buf').fadeOut();
		$('#stamped-main-widget').fadeIn();
		$('.availability-popup').removeClass('active');
		$('.availability-popup-overlay').removeClass('active');
		$('body').css('overflow', 'unset');
	});
	$('.product__information .availability-popup-overlay').click(function() {
		$('#stamped-main-widget-buf').removeAttr('id').attr('id', 'stamped-main-widget');
		$('.availability-popup #stamped-main-widget').removeAttr('id').attr('id', 'stamped-main-widget-buf');
		StampedFn.reloadUGC();
		$('#stamped-main-widget-buf').fadeOut();
		$('#stamped-main-widget').fadeIn();
		$('.availability-popup').removeClass('active');
		$('.availability-popup-overlay').removeClass('active');
		$('body').css('overflow', 'unset');
	});
	$(document).on('click', '.product-fixed-form.product-fixed-form--shown .data_add_to_cart_bundle', function() {
		var variantId = $(this).data('variantid');
		var subIndex= $(this).data('index');
		if(subIndex == '0') {
			jQuery.ajax({
				type: 'POST',
				url: '/cart/add.js',
				data: {
					id: variantId,
					quantity: 1
				},
				dataType: 'json',
				success: function() {
					location.href='/cart';
				}
			});
		} else if( subIndex == '1') {
			$('body.template-product [data-product-original-form]').submit();
		} else if( subIndex == '3') {
			addToProduct(variantId, 1, "3", "Months");
		} else {
			addToProduct(variantId, 1, "6", "Months");
		}
	})
	$('.product__information .product-bundle .add-bundle').click(function() {
		var product_id = $(this).data('product-id');
		addToProduct(product_id, 1, "30", "Days");
	});
});
</script>

