{% assign product = all_products['copy-of-conception-support-plan-for-two'] %}

<section id="section-{{ section.id }}" class="conception-plan-template section--plan-template">
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-6 product-images">
        <img src="{{ section.settings.powder_product.featured_image | img_url: 'master' }}" class="lazyload powder-element active" alt="">
        {% if section.settings.show_capsule %}
        <img src="{{ section.settings.capsule_product.featured_image | img_url: 'master' }}" class="lazyload capsule-element" alt="">
        {% endif %}
        {% if section.settings.show_essential %}
        <img src="{{ section.settings.essential_product.featured_image | img_url: 'master' }}" class="lazyload essential-element" alt="">
        {% endif %}

        <!-- <div class="product-reviews-badge">
					<span class="stamped-product-reviews-badge stamped-main-badge" data-id="{{product.id}}" data-product-title="{{product.title}}" data-product-type="{{product.type}}" style="display: block;"></span>
				</div> -->
        <div class="save-label-group group-mobile">
          <span class="save-label powder-element active">Save {{ section.settings.powder_retail_price | minus: section.settings.powder_subscription_price | round | times: 100 | money_without_trailing_zeros }}</span>
          {% if section.settings.show_capsule %}
          <span class="save-label capsule-element">Save {{ section.settings.capsule_retail_price | minus: section.settings.capsule_subscription_price | round | times: 100 | money_without_trailing_zeros }}</span>
          {% endif %}
          {% if section.settings.show_essential %}
          <span class="save-label essential-element">Save {{ section.settings.essential_retail_price | minus: section.settings.essential_subscription_price | round | times: 100 | money_without_trailing_zeros }}</span>
          {% endif %}
        </div>
      </div>
      <div class="col-12 col-lg-6">
        <div class="product-info">
          <div class="product-title-wrapper">
            <h1 class="product-title">{{ section.settings.title }}</h1>
            <div class="save-label-group group-desktop">
              <span class="save-label powder-element active">Save {{ section.settings.powder_retail_price | minus: section.settings.powder_subscription_price | round | times: 100 | money_without_trailing_zeros }}</span>
              {% if section.settings.show_capsule %}
              <span class="save-label capsule-element">Save {{ section.settings.capsule_retail_price | minus: section.settings.capsule_subscription_price | round | times: 100 | money_without_trailing_zeros }}</span>
              {% endif %}
              {% if section.settings.show_essential %}
              <span class="save-label essential-element">Save {{ section.settings.essential_retail_price | minus: section.settings.essential_subscription_price | round | times: 100 | money_without_trailing_zeros }}</span>
              {% endif %}
            </div>
          </div>
          <span class="stamped-product-reviews-badge stamped-main-badge" data-id="{{product.id}}" data-product-title="{{product.title}}" data-product-type="{{product.type}}" style="display: block;padding:10px 0;"></span>
          <div class="bundle-list">{{ section.settings.bundle_list }}</div>
          <div class="product-description descr-desktop">{{ section.settings.descr }}</div>

          <div class="option-list">
            <div class="product-option">
              <input type="radio" class="pc-radio" name="product_option" id="option_powder" value="powder" checked>
              <label for="option_powder" class="pc-option-label">Prenatal Multi Powder -&nbsp;<span>{{ section.settings.powder_subscription_price | times: 100 | money }}</span></label>
            </div>
            {% if section.settings.show_capsule %}
            <div class="product-option">
              <input type="radio" class="pc-radio" name="product_option" id="option_capsule" value="capsule">
              <label for="option_capsule" class="pc-option-label">Prenatal Multi Capsules -&nbsp;<span>{{ section.settings.capsule_subscription_price | times: 100 | money }}</span></label>
            </div>
            {% endif %}
            {% if section.settings.show_essential %}
            <div class="product-option">
              <input type="radio" class="pc-radio" name="product_option" id="option_essential" value="essential">
              <label for="option_essential" class="pc-option-label">Prenatal Multi Essentials -&nbsp;<span>{{ section.settings.essential_subscription_price | times: 100 | money }}</span></label>
              <span class="option-difference"><a href="javascript:;" class="open-popup">What’s the difference</a></span>
            </div>
            {% endif %}
          </div>

          <div class="product__want-to-try">
            <div class="box--text"><p><strong>Save $200</strong> with code <strong>CONCEIVE200</strong></p><p>Valid for new subscribers, $66.67 discount applied to months 1, 2, and 3 of subscription</p></div>
          </div>

          <div class="product-prices">
            <div class="subscription-price">
