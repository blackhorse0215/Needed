              {% assign product = all_products[section.settings.powder_product] %}
              {% if product.available %}{% include 'preorder-product' %}{% endif %}
              <input type="hidden" id="quantity" name="quantity" value="1">
              <input type="hidden" class="hidden-variant-id" name="id" value="{{ all_products[section.settings.powder_product].variants[0].id }}">
              <button type="submit" name="add" class="btn-bundle-plan">{{ section.settings.powder_btn_text }}</button>
            </form>
            {% if section.settings.show_capsule %}
            <form action="/cart/add" method="post" enctype="multipart/form-data" class="capsule-element" data-product-original-form="" data-productid="{{ all_products[section.settings.capsule_product].id }}">
              {% assign product = all_products[section.settings.capsule_product] %}
              {% if product.available %}{% include 'preorder-product' %}{% endif %}
              <input type="hidden" id="quantity" name="quantity" value="1">
              <input type="hidden" class="hidden-variant-id" name="id" value="{{ all_products[section.settings.capsule_product].variants[0].id }}">
              <button type="submit" name="add" class="btn-bundle-plan">{{ section.settings.capsule_btn_text }}</button>
            </form>
            {% endif %}
            {% if section.settings.show_essential %}
            <form action="/cart/add" method="post" enctype="multipart/form-data" class="essential-element" data-product-original-form="" data-productid="{{ all_products[section.settings.essential_product].id }}">
              {% assign product = all_products[section.settings.essential_product] %}
              {% if product.available %}{% include 'preorder-product' %}{% endif %}
              <input type="hidden" id="quantity" name="quantity" value="1">
              <input type="hidden" class="hidden-variant-id" name="id" value="{{ all_products[section.settings.essential_product].variants[0].id }}">
              <button type="submit" name="add" class="btn-bundle-plan">{{ section.settings.essential_btn_text }}</button>
            </form>
            {% endif %}
          </div>

          <div class="bundle-comments">{{ section.settings.bundle_comment }}</div>

          <div class="product-description descr-mobile">{{ section.settings.descr }}</div>
          <div class="product-description descr-desktop">{{ section.settings.descr_bottom }}</div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  $('#section-{{ section.id }} .option-difference .open-popup').click(function() {
    $('html, body').animate({
      scrollTop: $('#section-starter-plan-comparison').offset().top - 100
    }, 500);
  });
  
  $('.additional-info-wrapper .why-preorder').click(function() {
		$('#stamped-main-widget').removeAttr('id').attr('id', 'stamped-main-widget-buf');
		$('.availability-popup #stamped-main-widget-buf').removeAttr('id').attr('id', 'stamped-main-widget');
		StampedFn.reloadUGC();
		$('#stamped-main-widget-buf').fadeOut();
		$('#stamped-main-widget').fadeIn();
		$('.availability-popup').addClass('active');
		$('.availability-popup-overlay').addClass('active');
		$('body').css('overflow', 'hidden');
	});
	$('.additional-info-wrapper .availability-popup .availability-popup-close').click(function() {
		$('#stamped-main-widget-buf').removeAttr('id').attr('id', 'stamped-main-widget');
		$('.availability-popup #stamped-main-widget').removeAttr('id').attr('id', 'stamped-main-widget-buf');
		StampedFn.reloadUGC();
		$('#stamped-main-widget-buf').fadeOut();
		$('#stamped-main-widget').fadeIn();
		$('.availability-popup').removeClass('active');
		$('.availability-popup-overlay').removeClass('active');
		$('body').css('overflow', 'unset');
	});
	$('.additional-info-wrapper .availability-popup-overlay').click(function() {
		$('#stamped-main-widget-buf').removeAttr('id').attr('id', 'stamped-main-widget');
		$('.availability-popup #stamped-main-widget').removeAttr('id').attr('id', 'stamped-main-widget-buf');
		StampedFn.reloadUGC();
		$('#stamped-main-widget-buf').fadeOut();
		$('#stamped-main-widget').fadeIn();
		$('.availability-popup').removeClass('active');
		$('.availability-popup-overlay').removeClass('active');
		$('body').css('overflow', 'unset');
	});

  $("#section-{{ section.id }} .pc-radio").on('change', function() {
    var option = $(this).val();

    if (option == "powder") {
      $('#section-{{ section.id }}').find('.powder-element').addClass('active');
      $('#section-{{ section.id }}').find('.capsule-element').removeClass('active');
      $('#section-{{ section.id }}').find('.essential-element').removeClass('active');
    } else if (option == "capsule") {
      $('#section-{{ section.id }}').find('.powder-element').removeClass('active');
      $('#section-{{ section.id }}').find('.capsule-element').addClass('active');
      $('#section-{{ section.id }}').find('.essential-element').removeClass('active');
    } else if (option == "essential") {
      $('#section-{{ section.id }}').find('.powder-element').removeClass('active');
      $('#section-{{ section.id }}').find('.capsule-element').removeClass('active');
      $('#section-{{ section.id }}').find('.essential-element').addClass('active');
    }
  });
</script>

