<style>
  #section-{{ section.id }} .product-title {
    font-family: "Copernicus-Bold";
    font-size: 24px;
  }
  #section-{{ section.id }} .text {
    font-size: 16px;
  }
  #section-{{ section.id }} p+ul.product-text {
    padding-bottom: 55px;
  }
  #section-{{ section.id }} ul.product-text li {
    position: relative;
    padding: 0 27px;
    margin-bottom: 20px;
    max-width: 364px;
  }
  #section-{{ section.id }} .ingredient-more {
    margin-bottom: 20px;
    margin-top: 15px;
    padding-left: 27px;
  }
  #section-{{ section.id }} ul.product-text li:before {
    position: absolute;
    content: url("https://cdn.shopify.com/s/files/1/0195/3293/9328/t/49/assets/icon-check.svg");
    width: 14px;
    height: 14px;
    top: 2px;
    left: 0px;
  }
  #section-{{ section.id }} .ingredient-desc {
    font-size: 13px;
    opacity: 0.5;
    padding-left: 27px;
  }
  #section-{{ section.id }} .product-ingredient {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    padding-left: 27px;
    margin-bottom: 10px;
    max-width: 340px;
  }
  #section-{{ section.id }} .product-ingredient li {
    display: grid;
    text-align: center;
    background: white;
    height: 85px;
    padding: 20px 0px;
  }
  #section-{{ section.id }} .product-ingredient li:last-child {
    margin-right: 0px;
  }
  #section-{{ section.id }} .product-ingredient li span:nth-child(1) {
    font-size: 15px;
    margin-bottom: 10px;
    font-family: 'Copernicus-Bold';
  }
  #section-{{ section.id }} .product-ingredient li span:nth-child(2) {
    font-size: 16px;
  }
  #section-{{ section.id }} {
    padding-top: 80px;
    padding-bottom: 80px;
  }
  #section-{{ section.id }} .page-top {
    padding: 0 175px;
  }
  #section-{{ section.id }} .page-top h2 {
    font-family: 'Copernicus-Bold';
    font-size: 35px;
  }
  #section-{{ section.id }} .page-top p {
    margin-bottom: 22px;
    margin-top: 22px;
  }
  #section-{{ section.id }} .button--primary {
    padding: 20px 42px;
    border-radius: 30px;
    position: absolute;
    bottom: 0;
  }
  #section-{{ section.id }} .bottom-text {
    color: #1F3337;
    font-size: 16px;
    font-weight: bold;
    letter-spacing: 0;
    line-height: 19px;
    display: block;
    max-width: 364px;
    margin: 3px auto 18px;
  }
  #section-{{ section.id }} .save_additional {
    display: none;
  }
  #section-{{ section.id }} #rc_container .rc_block {
    margin: 0;
    padding: 0;
  }
  #section-{{ section.id }} #rc_container .rc_block__type--active {
    background: none;
  }
  #section-{{ section.id }} .product__supplement-fact {
    margin-top: 16px;
  }
  #section-{{ section.id }} .product__supplement-link {
    color: #1f3337;
    opacity: .65;
    line-height: 24px;
    transition: .3s all;
    font-size: 15px;
  }
  #section-{{ section.id }} .faq_link {
    color: #1f3337;
    opacity: .65;
    line-height: 24px;
    font-size: 16px;
    text-transform: uppercase;
  }
  #section-{{ section.id }} .have_ques {
    color: #1f3337;
    opacity: .65;
    line-height: 24px;
    font-size: 16px;
    cursor: pointer;
  }
  #rc_price_onetime {
    font-weight: bold;
  }
  #section-{{ section.id }} .popup .popup__container .popup-img-wrapper img {
    visibility: visible;
  }
  #section-{{ section.id }} .popup .popup__container .popup-img-wrapper {
    width: auto;
    height: auto;
  }
  #section-{{ section.id }} .product__supplement-fact .popup--supplement {
    display: none;
  }
  .quiz-pro-o3 .product__accordion .accordion__pane .accordion__title span:not(.accordion__state) {
    max-width: 100%;
  }
  @media (min-width: 992px) {
    #section-{{ section.id }} .info-top-group {
      position: relative;
      display: flex;
      align-items: center;
    }
    #section-{{ section.id }} .product-ingredient li {
      margin-right: 4px;
      width: 152px;
      height: 70px;
      margin-bottom: 4px;
    }
    #section-{{ section.id }} .col-12 {
      margin-top: 50px;
    }
    #section-{{ section.id }} {
      background-image: linear-gradient(to right, #FFCEC1, #FFCEC1 62%, #ffe6e0 38%, #ffe6e0);
    }
    #section-{{ section.id }} .product-title {
      margin-bottom: 25px;
    }
    #section-{{ section.id }} .page-top .mobile-show {
      display: none;
    }
  }
  @media (min-width: 1680px) {
    #section-{{ section.id }} {
      background-image: linear-gradient(to right, #FFCEC1, #FFCEC1 60%, #ffe6e0 40%, #ffe6e0);
    }
  }
  @media (min-width: 2000px) {
    #section-{{ section.id }} {
      background-image: linear-gradient(to right, #FFCEC1, #FFCEC1 59%, #ffe6e0 41%, #ffe6e0);
    }
  }
  @media (min-width: 2230px) {
    #section-{{ section.id }} {
      background-image: linear-gradient(to right, #FFCEC1, #FFCEC1 58%, #ffe6e0 42%, #ffe6e0);
    }
  }
  @media (min-width: 2480px) {
    #section-{{ section.id }} {
      background-image: linear-gradient(to right, #FFCEC1, #FFCEC1 57.2%, #ffe6e0 42.8%, #ffe6e0);
    }
  }
  @media (max-width: 991px) {
    #section-{{ section.id }} .product-information {
      max-width: 500px;
      margin: 0 auto;
    }
    #section-{{ section.id }} ul.product-text li {
      margin: 0 auto 20px;
    }
    #section-{{ section.id }} .page-top {
      padding: 0;
    }
    #section-{{ section.id }} .mobile-hide {
      display: none;
    }
    #section-{{ section.id }} .product-title {
      margin-bottom: 20px;
      text-align: center;
    }
    #section-{{ section.id }} {
      background: #FFCEC1;
      padding-top: 50px;
      padding-bottom: 60px;
      margin-top: 20px;
    }
    #section-{{ section.id }} .page-top h2 {
      font-size: 32px;
    }
    #section-{{ section.id }} .page-top .text {
      font-size: 18px;
    }
    #section-{{ section.id }} .product-left .product-title, #section-{{ section.id }} .product-right .product-title {
      text-align: center;
      padding: 0;
      padding-bottom: 20px;
    }
    #section-{{ section.id }} .ingredient-more {
      margin-bottom: 20px;
    }
    #section-{{ section.id }} .product-ingredient {
      justify-content: space-between;
      flex-wrap: wrap;
      margin: 0 auto 10px;
    }
    #section-{{ section.id }} .product-ingredient li {
      width: calc(50% - 2.5px);
      margin-bottom: 5px;
    }
    #section-{{ section.id }} .switch-btn {
      display: flex;
      margin: 30px 0px;
    }
    #section-{{ section.id }} .switch-btn .btn {
      width: 50%;
      border: 1px solid #1F3337;
      padding: 16px 0px;
      cursor: pointer;
    }
    #section-{{ section.id }} .switch-btn .left {
      border-radius: 25px 0px 0px 25px;
    }
    #section-{{ section.id }} .switch-btn .center {
      border-left: 0;
    }
    #section-{{ section.id }} .switch-btn .right {
      border-radius: 0px 25px 25px 0px;
      border-left: 0px;
    }
    #section-{{ section.id }} .switch-btn .active {
      background: white;
    }
    #section-{{ section.id }} p+ul.product-text {
      padding-bottom: 0;
    }
    #section-{{ section.id }} .button--primary {
      width: 100%;
      max-width: 400px;
      position: relative;
      left: 50%;
      transform: translateX(-50%);
    }
  }
</style>

<div id="section-{{ section.id }}" class="starter-plan-comparison">
  <div class="container">
    <div class="page-top text-center">
      <h2 class="mobile-hide">{{ section.settings.page_title }}</h2>
      <p class="text mobile-hide">{{ section.settings.page_sub_title }}</p>
      <h2 class="mobile-show">{{ section.settings.page_title }}</h2>
      <p class="text mobile-show">{{ section.settings.page_sub_title }}</p>
      <div class="mobile-show" style="position: relative; width: 100%; max-width: 266px; margin: auto;">
        <div style="padding-bottom: 100%;">
          <img src="{{ section.settings.page_image | img_url: "756x" }}" alt="powder and pill" style="position: absolute; left: 0; top: 0; width: 100%;">
        </div>
      </div>
      <div class="switch-btn mobile-show">
        <div class="btn left active">{{ section.settings.btn_name_1 }}</div>
        <div class="btn center">{{ section.settings.btn_name_2 }}</div>
        <div class="btn right">{{ section.settings.btn_name_3 }}</div>
      </div>
    </div>
    <div class="row">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          <div class="col-12 col-lg-4 {% if forloop.index0 == 0 %} product-left {% elsif forloop.index0 == 1 %} product-center {% else %} product-right {% endif %}">
            <div class="product-information">
              <div class="info-top-group">
                <div>
                  <h3 class="product-title">{{ block.settings.pro_title }}</h3>
                  <ul class="product-text text">
                    {{ block.settings.pro_text_1 }}
                  </ul>
                </div>
              </div>
              <ul class="product-ingredient">
                {{ block.settings.ingredient }}
              </ul>
              <p class="ingredient-desc">{{ block.settings.ingredient_desc }}</p>
              <p class="ingredient-more text">{{ block.settings.ingredient_more }}</p>
              <ul class="product-text text">
                {{ block.settings.pro_text_2 }}
              </ul>
              {% if block.settings.prenatal_product != blank %}
                {% if block.settings.bottom_text != blank %}
                  <label class="bottom-text">{{ block.settings.bottom_text }}</label>
                {% endif %}
                {% assign compare_product = all_products[block.settings.prenatal_product] %}
                {% if compare_product.handle != product.handle %}
                  {% assign compare_link = '/products/' | append: compare_product.handle %}
                  {% if compare_product.handle == 'prenatal-multi-powder' %}
                    <a href="javascript:;" class="button button--primary select-variant" data-variant="powder">Shop Prenatal Multi Powder</a>
                  {% elsif compare_product.handle == 'prenatal-multi-capsules' %}
                    <a href="javascript:;" class="button button--primary select-variant" data-variant="capsule">Shop Prenatal Multi Capsules</a>
                  {% else %}
                    <a href="javascript:;" class="button button--primary select-variant" data-variant="essential">Shop Prenatal Multi Essentials</a>
                  {% endif %}
                {% endif %}
              {% endif %}
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $(window).resize(function() {
      if($(window).width() < 992) {
        if ($("#section-{{ section.id }} .switch-btn .left").hasClass("active")) {
          $("#section-{{ section.id }} .product-center").css('display', 'none');
          $("#section-{{ section.id }} .product-right").css('display', 'none');
        } else if ($("#section-{{ section.id }} .switch-btn .center").hasClass("active")) {
          $("#section-{{ section.id }} .product-left").css('display', 'none');
          $("#section-{{ section.id }} .product-right").css('display', 'none');
        } else {
          $("#section-{{ section.id }} .product-center").css('display', 'none');
          $("#section-{{ section.id }} .product-left").css('display', 'none');
        }
      } else {
        $("#section-{{ section.id }} .product-left").css('display', 'block');
        $("#section-{{ section.id }} .product-center").css('display', 'block');
        $("#section-{{ section.id }} .product-right").css('display', 'block');
      }
    })

    if($(window).width() < 992) {
      if ($("#section-{{ section.id }} .switch-btn .left").hasClass("active")) {
        $("#section-{{ section.id }} .product-center").css('display', 'none');
        $("#section-{{ section.id }} .product-right").css('display', 'none');
      } else if ($("#section-{{ section.id }} .switch-btn .center").hasClass("active")) {
        $("#section-{{ section.id }} .product-left").css('display', 'none');
        $("#section-{{ section.id }} .product-right").css('display', 'none');
      } else {
        $("#section-{{ section.id }} .product-center").css('display', 'none');
        $("#section-{{ section.id }} .product-left").css('display', 'none');
      }
    }
    
    $("#section-{{ section.id }} .switch-btn .btn").on("click", function() {
      $("#section-{{ section.id }} .switch-btn .btn").removeClass("active");
      $(this).addClass("active");
      
      if ($(this).hasClass("left")) {
        $("#section-{{ section.id }} .product-left").css('display', 'block');
        $("#section-{{ section.id }} .product-center").css('display', 'none');
        $("#section-{{ section.id }} .product-right").css('display', 'none');
      } else if ($(this).hasClass("center")) {
        $("#section-{{ section.id }} .product-left").css('display', 'none');
        $("#section-{{ section.id }} .product-center").css('display', 'block');
        $("#section-{{ section.id }} .product-right").css('display', 'none');
      } else {
        $("#section-{{ section.id }} .product-left").css('display', 'none');
        $("#section-{{ section.id }} .product-center").css('display', 'none');
        $("#section-{{ section.id }} .product-right").css('display', 'block');
      }
    })
    
    $('#section-{{ section.id }}').on('click', '.have_ques, .faq_link', function() {
      $('html, body').animate({
        scrollTop: parseInt($('.quiz-pro-o3').offset().top) - 100
      }, 850);
    });

    $("#section-{{ section.id }} .select-variant").on('click', function() {
      var option = $(this).data('variant');

      if (option == "powder") {
        $('.section--plan-template .pc-radio[value=powder]').click();
      } else if (option == "capsule") {
        $('.section--plan-template .pc-radio[value=capsule]').click();
      } else if (option == "essential") {
        $('.section--plan-template .pc-radio[value=essential]').click();
      }

      $('html, body').animate({
        scrollTop: 0
      }, 500);
    });
  })
</script>

