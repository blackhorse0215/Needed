<section class="banner" data-section-id="{{ section.id }}" data-section-type="banner">
    <div class="container">

		{%- if section.settings.title != blank -%}
			<div class="col-12">
				<h1 class="banner__title"><span class="banner__title-shape">{{ section.settings.title }}</span></h1>
			</div>
		{%- endif -%}

        {%- if section.settings.description != blank -%}
			<div class="col-12">
				<div class="banner__description">{{ section.settings.description }}</div>
			</div>
        {%- endif -%}

        {%- if section.settings.cta_text != blank and section.settings.cta_url != blank -%}
			<div class="col-12">
				<div class="banner__action">
					<a href="{{ section.settings.cta_url }}" class="button button--primary">
						{{ section.settings.cta_text }}
					</a>
				</div>
			</div>
        {%- endif -%}
    </div>
</section>

<style>
    .banner[data-section-id="{{ section.id }}"] {
        background-image: url({{ section.settings.image | img_url: '2000x' }});
    }
    .banner[data-section-id="{{ section.id }}"] .banner__title strong {
        color: #fff;
    }

	{% if section.settings.image_mobile != blank %}
	@media (max-width: 767px) {
		.banner[data-section-id="{{ section.id }}"] {
			background-image: url({{ section.settings.image_mobile | img_url: '1200x' }});
		}
	}
	{% endif %}
</style>

{% schema %}
    {
        "name": "Banner",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Banner background"
            },
			{
				"type": "image_picker",
				"id": "image_mobile",
				"label": "Mobile banner background"
			},
            {
                "type": "textarea",
                "id": "title",
                "label": "Banner main heading",
				"info": "Use html tag <strong>text</strong> for highlight text with primary color"
            },
            {
                "type": "textarea",
                "id": "description",
                "label": "Banner description"
            },
            {
                "type": "text",
                "id": "cta_text",
                "label": "Button text"
            },
            {
                "type": "url",
                "id": "cta_url",
                "label": "Button URL"
            }
        ]
    }
{% endschema %}
