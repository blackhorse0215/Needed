{% if section.settings.show_section %}
	<section class="evidence">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-6">
					<div class="evidence__content">
						<h2 class="evidence__title">{{ section.settings.title }}</h2>
						{% if section.settings.description != blank %}
							<div class="evidence__description">{{ section.settings.description }}</div>
						{% endif %}
					</div>
				</div>

				<div class="col-lg-6">
					<div class="evidence__media" style="background-image: url({{ section.settings.image | img_url: "master" }});">
						<div class="evidence__overlay">
							<h3 class="evidence__media-title">{{ section.settings.image_title }}</h3>
							{% if section.settings.image_subtitle != blank %}
								<p class="evidence__media-subtitle">{{ section.settings.image_subtitle }}</p>
							{% endif %}
							{% if section.settings.image_link_url != blank %}
								<a href="{{ section.settings.image_link_url }}" class="evidence__link" target="_blank">{{ section.settings.image_link_text }}</a>
							{% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endif %}


{% schema %}
{
	"name": "Evidence",
	"settings": [
		{
			"type": "checkbox",
			"id": "show_section",
			"label": "Show section",
			"default": true
		},
		{
			"type": "text",
			"id": "title",
			"label": "Heading",
			"default": "our clinical evidence."
		},
		{
			"type": "richtext",
			"id": "description",
			"label": "Description",
			"default": "<p>copy explaining the amount of effort that goes into the research behind the products.  copy explaining the amount of effort that goes into the research behind the products. copy explaining the amount of effort that goes into the research behind the products.</p>",
			"info": "Use 'bold' text, for highlight text with green (#87893e) color"
		},
		{
			"type": "image_picker",
			"id": "image",
			"label": "Image"
		},
		{
			"type": "text",
			"id": "image_title",
			"label": "Image heading",
			"default": "title of the white paper here."
		},
		{
			"type": "text",
			"id": "image_subtitle",
			"label": "Image subheading",
			"default": "key takeaways from the article will go here."
		},
		{
			"type": "text",
			"id": "image_link_text",
			"label": "Image link text",
			"default": "read more"
		},
		{
			"type": "url",
			"id": "image_link_url",
			"label": "Image link url"
		}
	]
}
{% endschema %}
