<script>
    $(document).ready(function() {
        $('.sample-list').on('click', '.bundle-reviews .stamped-product-reviews-badge', function() {
            var idx = $(this).data('idx');
            var title = $(this).data('product-title');
            var product_list = '{{ product_list }}';

            product_list = product_list.split('&');
            var review_html = '<div id="stamped-main-widget" class="stamped-main-widget" data-widget-style="standard" data-product-id="' + product_list[idx] + '"></div>';
            $('.sample-reviews-sidebar .sidebar-body').html(review_html);
            $('.sample-reviews-sidebar .sidebar-header .sample-title').html(title);
            StampedFn.reloadUGC();
            $('.sample-reviews-sidebar').addClass('active');
            $('.sample-reviews-sidebar-overlay').addClass('active');
            $('body').css('overflow', 'hidden');
        });
        $('.sample-reviews-sidebar-overlay').on('click', function() {
            if ($(this).hasClass('active')) {
                $('body').css('overflow', 'unset');
                $('.sample-reviews-sidebar').removeClass('active');
                $(this).removeClass('active');
            }
        });
        $('.sample-reviews-sidebar').on('click', '.sidebar-close', function() {
            if ($('.sample-reviews-sidebar').hasClass('active')) {
                $('body').css('overflow', 'unset');
                $('.sample-reviews-sidebar').removeClass('active');
                $('.sample-reviews-sidebar-overlay').removeClass('active');
            }
        });
    });
</script>

