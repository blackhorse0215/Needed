<div class="container sample-list">
    {% assign product_list = "" %}
    {% for block in section.blocks %}
        <div class="bundle-item-container row" id="bundle-item-container-{{ forloop.index }}">
            <div class="col-md-6 col-sm-12">
                <div class="bundle-image-wrapper">
                    <img class="bundle-image" src="{{ block.settings.bundle_image | img_url : 'master' }}">
                </div>
                <div class="bundle-reviews">
                    {% assign product = all_products[block.settings.bundle_product] %}
                    <span class="stamped-product-reviews-badge stamped-main-badge" data-idx="{{ forloop.index }}" data-product-title="{{ block.settings.bundle_title | strip_html }}" data-id="{{product.id}}" data-product-title="{{product.title}}" data-product-type="{{product.type}}" style="display: block;"></span>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="bundle-content-wrapper">
                    <h2 class="bundle-title">{{ block.settings.bundle_title }}</h2>
                    <ul class="bundle-lists">
                        {{ block.settings.bundle_list }}
                    </ul>
                    <p class="bundle-subtitle">{{ block.settings.bundle_subtitle }}</p>
                    <div class="bundle-description">
                        {{ block.settings.bundle_description }}
                    </div>

                    {% comment %}
                    <div class="price-subscription">
                        <div class="retail-price">
                            <div class="label-retail">Retail Price</div>
                            <div class="content-retail">{{ block.settings.retail_price }}</div>
                        </div>

                        <div class="bundled-subscription">
                            <div class="label-subscription">Bundled Subscription</div>
                            <div class="content-subscription">{{ block.settings.bundled_subscription }}</div>
                        </div>
                    </div>
                    {% endcomment %}

                    {% if block.settings.additional_info != blank %}
                    <p class="bundle-additional-info">
                        {{ block.settings.additional_info }}
                    </p>
                    {% endif %}
                    <form action="/cart/add" method="post" enctype="multipart/form-data" data-product-original-form="" data-productid="{{all_products[block.settings.bundle_product].id}}">
                        {% assign product = all_products[block.settings.bundle_product] %}
                        {% if product.available %}{% include 'preorder-product' %}{% endif %}
                        <input type="hidden" id="quantity" name="quantity" value="1">
                        <input type="hidden" name="id" value="{{ all_products[block.settings.bundle_product].variants[0].id }}">
                        <button type="submit" name="add" class="btn-bundle-plan">{{ block.settings.bundle_button }}</button>
                    </form>
                    <ul class="bundle-comments">
                        {{ block.settings.bundle_comments }}
                    </ul>
                </div>
            </div>
        </div>
        {% assign product_list = product_list | append: '&' | append: product.id %}
    {% endfor %}
</div>


