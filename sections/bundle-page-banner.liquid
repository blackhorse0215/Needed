<style>
    #section-id-{{section.id}} {
        min-height: 360px;
        background-image: url('{{section.settings.banner_img | img_url: "master" }}');
        background-size: cover;
        background-position: center;
        text-align: center;
        padding-right:20px;
        padding-left: 20px;
    }
    #section-id-{{section.id}} h1 {
      font-size: 32px;
      padding-top: 148px;
      font-family: Copernicus-Bold;
    }
    #section-id-{{section.id}} h2 {
      max-width: 730px;
      margin: auto;
      margin-top: 16px;
      font-family: BrownPro Regular;
      color: #1F3337;
      font-size: 18px;
      letter-spacing: 0;
      line-height: 22px;
      text-align: center;
    }
    #section-id-{{section.id}} h3 {
      margin-top: 46px;
      font-size: 15px;
      font-family: BrownPro Regular;
      font-weight: 400;
    }
    #section-id-{{section.id}} p {
      font-size: 13px;
      margin-top: 8px;
    }
    @media (max-width: 1200px ){
      #section-id-bundle-page-banner h1 {
        padding-top: 120px;
      }

    }
    @media (max-width: 700px ) {
      #section-id-{{section.id}} {
        min-height: 400px;
        background-image: url('{{section.settings.mob_banner_img | img_url: "master" }}');
        background-size: cover;
        background-position: center;
        text-align: center;
        padding-right:20px;
        padding-left: 20px;
      }
      #section-id-{{section.id}} h1 {
        padding-top: 120px;
        font-size: 24px;
      }
      #section-id-{{section.id}} h2 {
        font-size: 16px;
      }
      #section-id-{{section.id}} h3 {
        font-size: 15px;
      }
      #section-id-{{section.id}} p {
        font-size: 13px;
        margin: auto;
        width: 250px;
      }
    }
    #section-id-{{section.id}} .mydiv {
      margin-left: 10px;
      margin-right: 10px;
      display: inline-block;
      position: relative;
      background: #1F3337;
      color: #B0C8C8;
      padding-top: 3px;
      padding-left: 4px;
      padding-right: 4px;
      font-size: 16px;
    }
    #section-id-{{section.id}}  span {
      display: block;
      width: 0;
      height: 0;
    }
    #section-id-{{section.id}}  .mydiv div:first-child {
      position: absolute;
      left: -7px;
      top: 0px;
    }
    #section-id-{{section.id}}  .mydiv div:first-child span:first-child {
      border-right: 7px solid #1F3337;
      border-bottom: 11px solid transparent;
    }
    #section-id-{{section.id}}  .mydiv div:first-child span:nth-child(2) {
      border-right: 7px solid #1F3337;
      border-top: 10px solid transparent;
    }
    #section-id-{{section.id}}  .mydiv div:nth-child(2) {
      position: absolute;
      right: -7px;
      top: 0px;
    }
    #section-id-{{section.id}}  .mydiv div:nth-child(2) span:first-child {
      border-left: 7px solid #1F3337;
      border-bottom: 11px solid transparent;
    }
    #section-id-{{section.id}}  .mydiv div:nth-child(2) span:nth-child(2) {
      border-left: 7px solid #1F3337;
      border-top: 10px solid transparent;
    }
</style>
<section id="section-id-{{section.id}}">
    <h1>{{section.settings.heading}}</h1>
    <h2>{{section.settings.subheading}}</h2>
    <h3>{{section.settings.discount_title}}</h3>
    <p>{{section.settings.discount_description}}</p>
</section>
{% schema %}
{
  "name": "Bundle Page Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_img",
      "label": "Banner Image"
    },
    {
      "type": "image_picker",
      "id": "mob_banner_img",
      "label": "Mobile Banner Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub Heading"
    },
    {
      "type": "text",
      "id": "discount_title",
      "label": "Discount Title"
    },
    {
      "type": "text",
      "id": "discount_description",
      "label": "Discount Description"
    }
  ]
}
{% endschema %}