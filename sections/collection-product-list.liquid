
<div class="shopify-section product-list bottom-spacing-{{ section.settings.margin_bottom }} top-spacing-{{ section.settings.margin_top }}" id="shopify-section-{{ section.id }}" data-section-id="{{ section.id }}">
    <div class="container">
        <div class="collection__list">

            {% if section.blocks.size > 0 %}
            <ul class="collection-list-items">

                {% for block in section.blocks %}
                
                <li class="collection-list-item  js-animate animate-fade-in animated">
                    <div class="item_container">
                        <div class="row">
                            <div class="col-sm-12 col-md-7">
                                <div class="product-card__content-wrapper">
                                    <h3 class="product-card__title">{{ block.settings.product_title }}</h3>
                                    <p class="product-card__description">{{ block.settings.product_description }}</p>
                                    <ul class="product-card__plans">
                                        {{ block.settings.product_plans }}
                                    </ul>
                                    <ul class="product-card__prices">
                                        {{ block.settings.product_prices }}
                                    </ul>

                                    <a class="product-card__link" href="{{ block.settings.link }}">{{ block.settings.button_title }}</a>
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-5">
                                <div class="product-card__image-wrapper">
                                    {{ block.settings.product_image | img_url: '460x320' | img_tag: block.settings.product_image.alt }}
                                </div>
                            </div>
                        </div>
                    </div>
                </li>

                {% endfor %}
            </ul>
            {% endif %}

        </div>
    </div>
</div>


<style>

#shopify-section-collection-product-list.top-spacing-none{
  margin-top: 0px;
}
#shopify-section-collection-product-list.bottom-spacing-none{
  margin-bottom: 0px;
}
#shopify-section-collection-product-list.top-spacing-small{
  margin-top: 80px;
}
#shopify-section-collection-product-list.bottom-spacing-small{
  margin-bottom: 80px;
}
#shopify-section-collection-product-list.top-spacing-medium{
  margin-top: 130px;
}
#shopify-section-collection-product-list.bottom-spacing-medium{
  margin-bottom: 130px;
}
#shopify-section-collection-product-list.top-spacing-large{
