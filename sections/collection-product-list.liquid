}
#shopify-section-collection-product-list.bottom-spacing-large{
  margin-bottom: 200px;
}

#shopify-section-collection-product-list .item_container{
  padding: 60px 110px;
  margin-bottom: 20px;
  background-color: {{ section.settings.background_color }}b5;
}

#shopify-section-collection-product-list .item_container .product-card__content-wrapper .product-card__title{
  font-family: "Copernicus-Bold";
  font-size: 28px;
  color: #1F3437;
  margin-top: 0px;
}

#shopify-section-collection-product-list .item_container .product-card__content-wrapper .product-card__description{
  font-family: "BrownPro-Regular";
  font-size: 16px;
  color: #1F3337;
  margin-top: 18px;
  max-width: 430px;
  line-height: 1.4;
}

#shopify-section-collection-product-list .item_container .product-card__content-wrapper .product-card__plans{
  margin-top: 20px;
}
#shopify-section-collection-product-list .item_container .product-card__content-wrapper .product-card__plans li{
  font-family: "BrownPro-Regular";
  font-size: 16px;
  color: #1F3337;
  line-height: 1.7;
  position: relative;
  padding-left: 26px;
}

#shopify-section-collection-product-list .item_container .product-card__content-wrapper .product-card__plans li:before{
  position: absolute;
  content: url("https://cdn.shopify.com/s/files/1/0195/3293/9328/t/49/assets/icon-check.svg");
  width: 14px;
  height: 14px;
  top: 2px;
  left: 0px;
}

#shopify-section-collection-product-list .item_container .product-card__content-wrapper .product-card__prices{
  margin-top: 40px;
}

#shopify-section-collection-product-list .item_container .product-card__content-wrapper .product-card__prices li{
  font-family: "BrownPro-Regular";
  font-size: 16px;
  color: #1F3337;
  line-height: 1.6;
}

#shopify-section-collection-product-list .item_container .product-card__content-wrapper .product-card__prices li .text-bold{
  font-family: "BrownPro-Bold";
}

#shopify-section-collection-product-list .item_container .product-card__content-wrapper a.product-card__link{
  border-radius: 30px;
  background-color: #1F3337;
  display: inline-block;
  text-decoration: none;
  padding: 18px 85px;
  margin-top: 20px;
  font-family: "BrownPro-Regular";
  color: #FFFFFF;
  font-size: 16px;
  text-align: center;
  min-width: 330px;
}

#shopify-section-collection-product-list .item_container .product-card__content-wrapper a.product-card__link:hover{
  background-color: #4d5e5f;
}

</style>


