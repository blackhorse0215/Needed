
<div class="shopify-section product-plan-with-image bottom-spacing-{{ section.settings.margin_bottom }} top-spacing-{{ section.settings.margin_top }}" id="shopify-section-{{ section.id }}" data-section-id="{{ section.id }}">
  {% assign img_url = section.settings.background_image %}
  <div class="content-container">
      <div class="container content-wrapper">
        {% if section.settings.background_image != blank %}
        <img class="lazyload product-plan-background" data-src="{{ img_url | img_url: '550x550' }}" alt="{{ img_url.alt }}" />
        {% endif %}
          <h2 class="main-title">{{ section.settings.product_title }}</h2>
          <img class="lazyload product-plan-background-mobile" data-src="{{ img_url | img_url: '550x550' }}" alt="{{ img_url.alt }}" />
            <div class="row">
              {% if section.settings.plan_block_position == 'right' %}
              <div class="col-md-6"></div>
              {% endif %}
              <div class="col-md-6">
                <div class="product-plan__content-wrapper">
                    <h3 class="product__title">{{ section.settings.product_subtitle }}</h3>
                    <ul class="product-plans">
                        {{ section.settings.product_plans }}
                    </ul>
                    <a class="product-plan__link" href="{{ section.settings.link }}">{{ section.settings.button_title }}</a>
                </div> 
              </div>
            </div>
      </div>
  </div>

</div>


<style>

  [data-section-id="{{ section.id }}"].top-spacing-none{
    margin-top: 0px;
  }
  [data-section-id="{{ section.id }}"].bottom-spacing-none{
    margin-bottom: 0px;
  }
  [data-section-id="{{ section.id }}"].top-spacing-small{
    margin-top: 80px;
  }
  [data-section-id="{{ section.id }}"].bottom-spacing-small{
    margin-bottom: 80px;
  }
  [data-section-id="{{ section.id }}"].top-spacing-medium{
    margin-top: 130px;
  }
  [data-section-id="{{ section.id }}"].bottom-spacing-medium{
    margin-bottom: 130px;
  }
  [data-section-id="{{ section.id }}"].top-spacing-large{
    margin-top: 200px;
  }
  [data-section-id="{{ section.id }}"].bottom-spacing-large{
    margin-bottom: 200px;
  }
  
  [data-section-id="{{ section.id }}"] .content-wrapper{
    padding: 105px 20px 0px;
    padding-bottom: 50px;
  }

  [data-section-id="{{ section.id }}"] .content-container{
    position: relative;
  }

  [data-section-id="{{ section.id }}"] .content-container .product-plan-background{
    width: auto;
    height: auto;
    position: absolute;
    z-index: 0;
    left: 90px;
    top: 210px;
  }


  [data-section-id="{{ section.id }}"] .content-container .content-wrapper .main-title{
    font-family: "Copernicus-Bold";
    font-size: 35px;
    text-align: center;
    color: #1F3437;
    position: absolute;
    width: calc(100% - 40px);
    margin: 0px auto;
    z-index: 1;
  }

  [data-section-id="{{ section.id }}"] .content-container .content-wrapper{
    padding-top: 130px;
    position: relative;
    top: 0px;
    margin-left: auto;
    margin-right: auto;
  }

  [data-section-id="{{ section.id }}"] .content-container .content-wrapper .product-plan__content-wrapper{
    padding-left: 110px;
    margin-top: 120px;
  }

  [data-section-id="{{ section.id }}"] .content-container .content-wrapper .product__title{
    font-family: "Copernicus-Bold";
    font-size: 22px;
    max-width: 370px;
    color: #1F3437;
    margin-bottom: 25px;
    line-height: 1.6;
  }

  [data-section-id="{{ section.id }}"] .content-container .content-wrapper .product-plans{
    max-width: 370px;
    padding-left: 28px;
  }

  [data-section-id="{{ section.id }}"] .content-container .content-wrapper .product-plans li{
    font-family: "BrownPro-Regular";
    max-width: 370px;
    font-size: 16px;
    line-height: 1.3;
    margin-top: 18px;
    padding-left: 5px;
    color: #1F3337;
    position: relative;
  }

  [data-section-id="{{ section.id }}"] .content-container .content-wrapper .product-plans li:before{
    position: absolute;
    content: url("https://cdn.shopify.com/s/files/1/0195/3293/9328/t/49/assets/icon-check.svg");
    width: 14px;
    height: 14px;
    top: 2px;
    left: -27px;
  }

  [data-section-id="{{ section.id }}"] .content-container .content-wrapper .product-plan__link{
    border-radius: 30px;
    color: #FFF;
    padding: 19px 80px;
    text-decoration: none;
    font-family: "BrownPro-Bold";
    font-size: 16px;
    margin-top: 50px;
    max-width: max-content;
    display: block;
    background-color: #1F3337;
  }

  [data-section-id="{{ section.id }}"] .content-container .content-wrapper .product-plan__link:hover{
    text-decoration: none;
    background-color: #4d5e5f;
  }

  @media (max-width: 768px){
    [data-section-id="{{ section.id }}"] .content-container .content-wrapper .main-title{
      position: relative !important;
      margin-bottom: 20px;
    }
  }
  
  @media (max-width: 560px){
    [data-section-id="{{ section.id }}"] .content-container .product-plan-background{
      left: 50%;
      transform: translateX(-50%);
    }

    [data-section-id="{{ section.id }}"] .content-container .content-wrapper .main-title{
      font-size: 30px !important;
      position: relative !important;
    }

    [data-section-id="{{ section.id }}"] .content-container .content-wrapper .product-plan__content-wrapper{
      padding-left: 0px !important;
      margin-top: 20px;
      width: 100%;
      margin-left: auto;
      margin-right: auto;
    }
  }

  @media (max-width: 420px){
    [data-section-id="{{ section.id }}"] .content-container .content-wrapper .product-plan__content-wrapper ul.product-plans,
    [data-section-id="{{ section.id }}"] .content-container .content-wrapper .product-plan__content-wrapper ul.product-plans li{
      max-width: max-content;
      width: 100%;
    }

    [data-section-id="{{ section.id }}"] .content-container .content-wrapper .product-plan__link{
      font-size: 14px;
      width: 100%;
      max-width: 100%;
      text-align: center;
      padding: 19px 10px;
    }
  }

  @media (max-width: 480px){
    .template-index .product-plan-with-image .content-wrapper .main-title{
        font-size: 26px !important;
    }
  }

  @media (max-width: 350px){
    .template-index .product-plan-with-image .content-wrapper .main-title{
        font-size: 24px !important;
    }
  }

  .product-plan-background-mobile{
    display: none;
  }

  @media (max-width: 768px){
    .product-plan-background-mobile{
      display: block;
      margin: 0px auto;
    }
    .product-plan-background{
      display: none;
    }
  }
</style>


{% schema %}
  {
    "name": "Product Plan With Image",
    "class": "product-plan-with-image",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "select",
        "id": "plan_block_position",
        "label": "Plan Content Position",
        "options": [
            {
                "value": "left", "label": "Left"
            }, 
            {
                "value": "right", "label": "Right"
            }
        ],
        "default": "left"
      },
      {
        "type": "select",
        "id": "margin_top",
        "label": "Section Top Space",
        "options": [
            {
                "value": "none", "label": "No Spacing"
            }, 
            {
                "value": "small", "label": "Small"
            }, 
            {
                "value": "medium", "label": "Medium"
            }, 
            {
                "value": "large", "label": "Large"
            }
        ],
        "default": "medium"
      },
      {
        "type": "select",
        "id": "margin_bottom",
        "label": "Section Bottom Space",
        "options": [
            {
                "value": "none", "label": "No Spacing"
            }, 
            {
                "value": "small", "label": "Small"
            }, 
            {
                "value": "medium", "label": "Medium"
            }, 
            {
                "value": "large", "label": "Large"
            }
        ],
        "default": "medium"
      },
      {
        "type": "text",
        "id": "product_title",
        "label": "Product title"
      },
      {
        "type": "textarea",
        "id": "product_subtitle",
        "label": "Product subtitle",
        "default": "Product subtitle"
      },
      {
        "type": "textarea",
        "id": "product_plans",
        "label": "Plan Content",
        "default": "<li>Lorem ipsum</li><li>Dolor sit amet, consectetur adipiscing elit.</li><li>Nunc mattis ornare.</li>"
      },
      {
        "type": "text",
        "id": "button_title",
        "label": "Button title"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Button Link",
        "info": "Optional"
      }
    ],
    "presets": [
      {
        "name": "Plan widget with image",
        "category": "6. Other"
      }
    ]
  }
{% endschema %}

