            },
            {
                "type": "richtext",
                "id": "cta_description",
                "label": "Description",
                "default": "<p>the text in this area brings the value of the quiz to life, and is approximately the length of three longer sentences or four shorter sentences, extending four lines vertically, which will appear to be a brief but elaborative amount of detail.</p>"
            },
            {
                "type": "text",
                "id": "link_text",
                "label": "Link text",
                "default": "identify your needs"
            },
            {
                "type": "url",
                "id": "link_url",
                "label": "Link url"
            }
        ],
        "presets": [
            {
                "name": "CTA info text",
                "category": "Information"
            }
        ]
    }

{% endschema %}