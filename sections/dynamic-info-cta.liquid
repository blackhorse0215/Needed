<section class="cta-info">
    <div class="container">
        <div class="cta-info__content js-animate animate-fade-in">
            <h2 class="cta-info__title">{{ section.settings.title }}</h2>
            {% if section.settings.cta_description != blank %}
                <div class="cta-info__description">{{ section.settings.cta_description }}</div>
            {% endif %}

            {% if section.settings.link_url != blank %}
                <a href="{{ section.settings.link_url }}" class="cta-info__link">{{ section.settings.link_text }}</a>
            {% endif %}
        </div>
    </div>

</section>

{% schema %}
    {
        "name": "CTA info text",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Heading",
