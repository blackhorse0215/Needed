<section class="banner index-banner home-banner-3" data-section-id="{{ section.id }}" data-section-type="banner">
  <div class="container">
 
  {%- if section.settings.title != blank -%}
    <div class="col-12 js-animate animate-fade-in">
      <h1 class="banner__title"><span class="banner__title-shape">{{ section.settings.title }}</span></h1>
    </div>
  {%- endif -%}

    {% if section.settings.button_url != nil %}
    <div class="banner-btn js-animate animate-fade-in" data-btn="{{section.settings.button_url}}"><a href="{{ section.settings.button_url }}"><span>{{ section.settings.button_text }}</span></a></div>
    {% endif %}
  </div>
</section>

<style>
  .banner[data-section-id="{{ section.id }}"] {
    {% if section.settings.image != nil %}
    background-image: url({{ section.settings.image | img_url: '2000x' }});
    {% endif %}
    text-align: center;
  }

  @media (min-width: 769px){
    #shopify-section-dynamic-home-banner-3-bundle2 section[data-section-id="{{ section.id }}"]{
      background-position: left !important;
    }
  }

  #shopify-section-dynamic-home-banner-3-bundle2 .banner__title .banner__title-shape:after{
    display: none;
  }

  @media screen and (max-width: 767px) {
    .banner[data-section-id="{{ section.id }}"] {
      {% if section.settings.image_mob != nil %}
      background-image: url({{ section.settings.image_mob | img_url: '800x' }});
      {% else %}
        {% if section.settings.image != nil %}
        background-image: url({{ section.settings.image | img_url: '800x' }});
        {% endif %}
      {% endif %}
    } 
  }
</style>


{% schema %}
    {
        "name": "Home banner | bottom",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Desktop background"
            },
            {
                "type": "image_picker",
                "id": "image_mob",
                "label": "Mobile background"
            },
            {
                "type": "textarea",
                "id": "title",
                "label": "Banner main heading",
				        "info": "Use html tag <strong>text</strong> for highlight text with primary color"
            },
            {
                "type": "text",
                "id": "button_text",
                "label": "Button text",
                "default": "take the quiz"
            },
            {
                "type": "url",
                "id": "button_url",
                "label": "Button url"
            }
        ],
        "presets": [
            {
                "name": "Home banner | bottom",
                "category": "Banner"
            }
        ]
    }

{% endschema %}
