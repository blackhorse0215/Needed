<style>
  #section-{{ section.id }} {
    padding: 120px 0 20px;
  }
  #section-{{ section.id }} .top-content {
    text-align: center;
  }
  #section-{{ section.id }} .section-title {
    font-family: 'Copernicus-Bold';
    font-size: 35px;
    letter-spacing: 0;
    line-height: 47px;
  }
  #section-{{ section.id }} .section-descr {
    font-size: 18px;
    letter-spacing: 0;
    line-height: 24px;
    margin-top: 30px;
  }

  #section-{{ section.id }} .product-list {
    margin-top: 50px;
  }
  #section-{{ section.id }} .product-list .item {
    display: flex;
    margin-top: 30px;
    min-height: 340px;
  }
  #section-{{ section.id }} .product-list .item a {
    display: flex;
    width: 100%;
    text-decoration: none;
    color: #1f3337;
  }
  #section-{{ section.id }} .product-list .item:first-child {
    margin-top: 0;
  }
  #section-{{ section.id }} .product-list .item .item-image {
    display: flex;
    width: 340px;
    position: relative;
  }
  #section-{{ section.id }} .product-list .item .item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  #section-{{ section.id }} .product-list .item .item-image .over-text {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #FFFFFF;
    font-size: 34px;
    letter-spacing: 0;
    line-height: 36px;
    text-align: center;
  }

  #section-{{ section.id }} .product-list .item .item-content {
    width: calc(100% - 340px);
    background-color: #F6F4F2;
    padding: 40px 20px;
  }
  #section-{{ section.id }} .product-list .item .content-inner {
    margin: 0 auto;
    max-width: 630px;
    width: 100%;
  }
  #section-{{ section.id }} .product-list .item .item-title {
    font-family: 'Copernicus-Bold';
    font-size: 24px;
    letter-spacing: 0;
    line-height: 31px;
  }
  #section-{{ section.id }} .product-list .item .item-subtitle {
    font-size: 18px;
    letter-spacing: 0;
    line-height: 26px;
    margin-top: 16px;
  }
  #section-{{ section.id }} .product-list .item .item-descr {
    font-size: 16px;
    letter-spacing: 0;
    line-height: 26px;
    margin-top: 32px;
  }
  #section-{{ section.id }} .middle-text {
    font-size: 16px;
    letter-spacing: 0;
    line-height: 26px;
    text-align: center;
    margin-top: 30px;
  }
  #section-{{ section.id }} .middle-text a {
    color: #1f3337;
  }

  #section-{{ section.id }} .icon-list {
    margin-top: 80px;
    display: flex;
    justify-content: space-around;
  }
  #section-{{ section.id }} .icon-list .icon {
    max-width: 183px;
    width: 100%;
    text-align: center;
  }
  #section-{{ section.id }} .icon-list .icon .icon-image {
    width: 32px;
    margin: 0 auto 10px;
  }
  #section-{{ section.id }} .icon-list .icon .icon-content {
    font-size: 16px;
    line-height: 22px;
  }

  @media (max-width: 991px) {
    #section-{{ section.id }} {
      padding: 80px 0 0px;
    }
    #section-{{ section.id }} .product-list {
      margin-top: 30px;
    }
    #section-{{ section.id }} .icon-list {
      margin-top: 60px;
    }
  }

  @media (max-width: 767px) {
    #section-{{ section.id }} .section-title {
      font-size: 26px;
      line-height: 35px;
    }
    #section-{{ section.id }} .section-descr {
      margin-top: 20px;
    }
    #section-{{ section.id }} .product-list .item {
      max-width: 400px;
      width: 100%;
      min-height: unset;
      margin-top: 20px;
      margin-left: auto;
      margin-right: auto;
    }
    #section-{{ section.id }} .product-list .item a {
      flex-direction: column;
    }
    #section-{{ section.id }} .product-list .item .item-image {
      width: 100%;
      height: 360px;
    }
    #section-{{ section.id }} .product-list .item .item-content {
      width: 100%;
      padding: 20px;
    }
    #section-{{ section.id }} .product-list .item .item-title {
      font-size: 22px;
      line-height: 30px;
    }
    #section-{{ section.id }} .product-list .item .item-descr {
      margin-top: 24px;
    }

    #section-{{ section.id }} .icon-list {
      flex-wrap: wrap;
      margin-top: 30px;
    }
    #section-{{ section.id }} .icon-list .icon {
      max-width: 50%;
      margin-top: 30px;
    }
    #section-{{ section.id }} .icon-list .icon .icon-content {
      max-width: 183px;
      width: 100%;
      margin: 0 auto;
    }
  }

  @media (max-width: 449px) {
    #section-{{ section.id }} .icon-list .icon .icon-content {
      max-width: 157px;
    }
  }

  @media (max-width: 390px) {
    #section-{{ section.id }} .product-list .item .item-image {
      width: 100%;
      height: 260px;
    }
  }
</style>

{% assign product_list = '' %}
{% assign icon_list = '' %}

{% if section.blocks.size > 0 %}
  {% for block in section.blocks %}
    {% if block.type == 'product' %}
      {% capture product_html %}
      <div class="item block-{{ block.id }}">
        <style>
          .block-{{ block.id }} .over-text {
            background-color: {{ block.settings.over_color | append: '66' }};
          }
        </style>

        <a href="/products/{{ block.settings.product }}">
          <div class="item-image">
            <img src="{{ block.settings.image | img_url: 'master' }}" class="lazyload" alt="">
            <div class="over-text">{{ block.settings.over_text }}</div>
          </div>
          <div class="item-content">
            <div class="content-inner">
              <h3 class="item-title">{{ block.settings.title }}</h3>
              <div class="item-subtitle">{{ block.settings.subtitle }}</div>
              <div class="item-descr">{{ block.settings.descr }}</div>
            </div>
          </div>
        </a>
      </div>
      {% endcapture %}

      {% assign product_list = product_list | append: product_html %}
    {% elsif block.type == 'icon' %}
      {%- capture icon_html -%}
      <div class="icon">
        <div class="icon-image">
          <img src="{{ block.settings.image | img_url: 'master' }}" class="lazyload" alt="">
        </div>
        <div class="icon-content">{{ block.settings.title }}</div>
      </div>
      {%- endcapture -%}

      {% assign icon_list = icon_list | append: icon_html %}
    {% endif %}
  {% endfor %}
{% endif %}

<section id="section-{{ section.id }}" class="mens-support-items">
  <div class="container">
    <div class="top-content">
      <h2 class="section-title">{{ section.settings.title }}</h2>
      <div class="section-descr">{{ section.settings.descr }}</div>
    </div>

    {% if product_list != blank %}
      <div class="product-list">{{ product_list }}</div>  
    {% endif %}

    {% if section.settings.middle_descr != blank %}
    <div class="middle-text">{{ section.settings.middle_descr }}</div>
    {% endif %}

    {% if icon_list != blank %}
      <div class="icon-list">{{ icon_list }}</div>
    {% endif %}
  </div>
</section>

