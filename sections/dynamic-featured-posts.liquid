<div class="home-featured-articles">
    <div class="container">
        <div class="row">
            {% for block in section.blocks  %}
                <div class="col-md-6">
                    <article class="article-card article-card--big" {% if block.settings.image != blank %} style="background-image: url({{ block.settings.image | img_url: "1200x" }});" {% endif %}>
                        <div class="article-card__content">
                            <h2 class="article-card__title">
								{%- if block.settings.title_url != blank -%}
									<a href="{{ block.settings.title_url }}">{{ block.settings.title }}</a>
									{%- else -%}
										{{- block.settings.title -}}
								{%- endif -%}
							</h2>

                            <div class="article-card__description">
                                {% if block.settings.description != blank %}
                                    {{ block.settings.description }}
                                {% endif %}
                            </div>

                            {% if block.settings.link_text != blank %}
                                <a href="{{ block.settings.url }}" class="article-card__link">{{ block.settings.link_text }}</a>
                            {% endif %}
                        </div>
                    </article>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Featured pages",
        "blocks": [
            {
            "type": "featured_post",
            "name": "Featured page",
            "settings": [
				{
					"type": "image_picker",
					"id": "image",
					"label": "Image"
				},
				{
					"type": "text",
					"id": "title",
					"label": "Heading"
				},
				{
					"type": "url",
					"id": "title_url",
					"label": "Heading url",
					"info": "If url not set, the heading will not be a link"
				},
				{
					"type": "textarea",
					"id": "description",
					"label": "Description"
				},
                {
                    "type": "text",
                    "id": "link_text",
                    "label": "Read more text",
                    "default": "Read more"
                },
				{
					"type": "url",
					"id": "url",
					"label": "Link url"
				}
            ]
            }
        ],
        "presets": [
            {
                "name": "Featured posts",
                "category": "Blog"
            }
        ]
    }

{% endschema %}
