    function toggleCheck() {
        if($("#expanded1").prop("checked") == true) {
            $("#more1").hide();
            $("#less1").show();
            $("#accordian1").removeClass("collapsed").addClass("expanded");
        } else {
            $("#more1").show()
            $("#less1").hide();
            $("#accordian1").removeClass("expanded").addClass("collapsed");
        }
    }

    function toggleCheck2() {
        if($("#expanded2").prop("checked") == true) {
            $("#more2").hide();
            $("#less2").show();
            $("#accordian2").removeClass("collapsed").addClass("expanded");
        } else {
            $("#more2").show()
            $("#less2").hide();
            $("#accordian2").removeClass("expanded").addClass("collapsed");
        }
    }

    function toggleCheck3() {
        if($("#expanded3").prop("checked") == true) {
            $("#more3").hide();
            $("#less3").show();
            $("#accordian3").removeClass("collapsed").addClass("expanded");
        } else {
            $("#more3").show()
            $("#less3").hide();
            $("#accordian3").removeClass("expanded").addClass("collapsed");
        }
    }

    function checkButton() {
        if($("#accordian1")[0].scrollHeight < $("#accordian1").height()) {
            $("#more1").hide();
            $("#less1").hide();
        }
    }

    function checkButton2() {
        if($("#accordian2")[0].scrollHeight < $("#accordian2").height()) {
            $("#more2").hide();
            $("#less2").hide();
        }
    }

    function checkButton3() {
        if($("#accordian3")[0].scrollHeight < $("#accordian3").height()) {
            $("#more3").hide();
            $("#less3").hide();
        }
    }
</script>