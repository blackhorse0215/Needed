    $("#more1").on('click', function() {
        toggleCheck();
    });

    $("#less1").on('click', function() {
        toggleCheck();
    })

    $("#more2").on('click', function() {
        toggleCheck2();
    });

    $("#less2").on('click', function() {
        toggleCheck2();
    })

    $("#more3").on('click', function() {
        toggleCheck3();
    });

    $("#less3").on('click', function() {
        toggleCheck3();
    })

    // $(window).resize(function() {
