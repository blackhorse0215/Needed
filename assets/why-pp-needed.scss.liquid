section.why-pp-needed {
    h2 {
        font-family: "Copernicus-Bold",sans-serif;
        font-size: 28px;
        line-height: 37px;
        text-align: center;
        color: #1F3437;
        width: 100%;
    }

    .why-pp-needed__row {
        margin-top: 60px;

        .why-pp-needed__col {
            padding-left: 15px !important;
            padding-right: 15px !important;
    
            img {
                width: 100%;

                @media (max-width: 500px) {
                    width: 50%;
                }
            }

            .why-pp-needed__item-title {
                @media(max-width: 768px) {
                    font-size: 18px !important;
                }
                @media(max-width: 500px) {
                    font-size: 16px !important;
                }
                display: block;
                margin-top: 30px;
                font-family: "Copernicus-Bold",sans-serif;
                font-size: 22px;
                line-height: 34px;
                text-align: left;
                color: #1F3337;
            }
        }
    }
}
